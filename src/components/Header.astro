---
interface Props {
  lastUpdated: string;
}

const { lastUpdated } = Astro.props;
---

<header class="header">
  <div class="header-content">
    <div class="header-badge">
      <span class="badge-icon">üìç</span>
      <span class="badge-text">Starnberger See & Umgebung</span>
    </div>
    <h1>Was ist los in <span class="highlight">P√∂cking</span>?</h1>
    <p class="subtitle">Veranstaltungen, Events & Tipps f√ºr Familien in Oberbayern</p>
  </div>
  <div class="header-decoration"></div>
</header>

<style>
  .header {
    position: relative;
    padding: var(--space-12) var(--space-4) var(--space-8);
    background: linear-gradient(135deg, var(--color-bg) 0%, var(--color-bg-secondary) 100%);
    overflow: hidden;
  }

  @media (min-width: 640px) {
    .header {
      padding: var(--space-16) var(--space-6) var(--space-10);
    }
  }

  .header-content {
    max-width: 1000px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .header-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: var(--color-card);
    border-radius: var(--radius-full);
    box-shadow: var(--shadow-sm);
    margin-bottom: var(--space-5);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-secondary);
  }

  .badge-icon {
    font-size: 1rem;
  }

  h1 {
    font-size: clamp(1.75rem, 6vw, 3rem);
    font-weight: 700;
    color: var(--color-text);
    letter-spacing: -0.03em;
    line-height: 1.1;
    margin-bottom: var(--space-4);
  }

  .highlight {
    color: var(--color-accent);
    position: relative;
  }

  .subtitle {
    font-size: clamp(1rem, 2.5vw, 1.125rem);
    color: var(--color-text-secondary);
    max-width: 500px;
    line-height: 1.5;
  }

  /* Decorative Background Element */
  .header-decoration {
    position: absolute;
    top: -50%;
    right: -20%;
    width: 60%;
    height: 200%;
    background: radial-gradient(ellipse at center, 
      rgba(232, 93, 4, 0.06) 0%, 
      transparent 70%);
    pointer-events: none;
  }

  @media (prefers-color-scheme: dark) {
    .header {
      background: linear-gradient(135deg, var(--color-bg) 0%, var(--color-bg-secondary) 100%);
    }
    
    .header-decoration {
      background: radial-gradient(ellipse at center, 
        rgba(255, 133, 52, 0.08) 0%, 
        transparent 70%);
    }
  }
</style>
