---
interface Props {
  lastUpdated?: string;
}

const { lastUpdated } = Astro.props;
---

<!-- Desktop: Compact fixed navbar -->
<nav class="navbar" id="navbar">
  <div class="navbar-inner">
    <a href="/" class="navbar-brand">
      <span class="navbar-title">Pöcking Events</span>
    </a>

    <!-- Right side: Weather + Theme Toggle -->
    <div class="navbar-right">
      <!-- Weather info -->
      <div class="navbar-weather" id="navbar-weather">
        <span class="navbar-weather-item" title="Lufttemperatur">
          <svg class="navbar-weather-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="5"/>
            <line x1="12" y1="1" x2="12" y2="3"/>
            <line x1="12" y1="21" x2="12" y2="23"/>
          </svg>
          <span id="navbar-temp">--°</span>
        </span>
        <span class="navbar-weather-item" title="Wassertemperatur">
          <svg class="navbar-weather-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"/>
          </svg>
          <span id="navbar-water">~4°</span>
        </span>
        <span class="navbar-weather-item" title="Sonnenaufgang">
          <svg class="navbar-weather-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M17 18a5 5 0 0 0-10 0"/>
            <line x1="12" y1="2" x2="12" y2="9"/>
            <line x1="4.22" y1="10.22" x2="5.64" y2="11.64"/>
            <line x1="1" y1="18" x2="3" y2="18"/>
            <line x1="21" y1="18" x2="23" y2="18"/>
            <line x1="18.36" y1="11.64" x2="19.78" y2="10.22"/>
            <polyline points="8 6 12 2 16 6"/>
          </svg>
          <span id="navbar-sunrise">--:--</span>
        </span>
        <span class="navbar-weather-item" title="Sonnenuntergang">
          <svg class="navbar-weather-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M17 18a5 5 0 0 0-10 0"/>
            <line x1="12" y1="9" x2="12" y2="2"/>
            <line x1="4.22" y1="10.22" x2="5.64" y2="11.64"/>
            <line x1="1" y1="18" x2="3" y2="18"/>
            <line x1="21" y1="18" x2="23" y2="18"/>
            <line x1="18.36" y1="11.64" x2="19.78" y2="10.22"/>
            <polyline points="16 6 12 10 8 6"/>
          </svg>
          <span id="navbar-sunset">--:--</span>
        </span>
        <span class="navbar-divider"></span>
        <a href="/s6" class="navbar-weather-item navbar-train" title="S6 Richtung München · Klick für Statistiken">
          <span class="navbar-train-badge">S6</span>
          <span class="navbar-train-dir">→ Muc</span>
          <span id="navbar-train-munich">--:--</span>
        </a>
        <a href="/s6" class="navbar-weather-item navbar-train" title="S6 Richtung Tutzing · Klick für Statistiken">
          <span class="navbar-train-badge">S6</span>
          <span class="navbar-train-dir">→ Tut</span>
          <span id="navbar-train-tutzing">--:--</span>
        </a>
        <a href="/s6" class="navbar-weather-item navbar-punctuality" id="navbar-punctuality" title="S6 Pünktlichkeit heute" style="display:none;">
          <span class="punctuality-dot" id="punctuality-dot"></span>
          <span class="punctuality-value" id="punctuality-value">–%</span>
        </a>
      </div>

      <button class="theme-toggle" id="theme-toggle" aria-label="Farbschema wechseln">
      <svg aria-hidden="true" class="icon-sun" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="5"></circle>
        <line x1="12" y1="1" x2="12" y2="3"></line>
        <line x1="12" y1="21" x2="12" y2="23"></line>
        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
        <line x1="1" y1="12" x2="3" y2="12"></line>
        <line x1="21" y1="12" x2="23" y2="12"></line>
        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
      </svg>
      <svg aria-hidden="true" class="icon-moon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
      </svg>
    </button>
    </div>
  </div>
</nav>

<!-- Hero section (scrolls with content) -->
<header class="header">
  <div class="header-inner">
    <p class="location">Starnberger See</p>
    <h1 class="title">
      Was ist los<br/>
      <span class="title-accent">in Pöcking?</span>
    </h1>
    <p class="tagline">Events & Veranstaltungen für die ganze Familie</p>
  </div>
  <div class="header-visual" aria-hidden="true"></div>
</header>

<style>
  /* === COMPACT FIXED NAVBAR (Desktop only) === */
  .navbar {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    background: var(--color-card);
    border-bottom: 1px solid var(--color-border-light);
    box-shadow: 0 2px 12px rgba(0,0,0,0.06);
  }

  @media (min-width: 768px) {
    .navbar {
      display: block;
    }
  }

  :root.dark .navbar {
    box-shadow: 0 2px 12px rgba(0,0,0,0.2);
  }

  .navbar-inner {
    width: 100%;
    padding: var(--space-3) var(--space-4);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-3);
  }

  @media (min-width: 1200px) {
    .navbar-inner {
      max-width: 1140px;
      margin: 0 auto;
      padding: var(--space-3) var(--space-5);
      gap: var(--space-4);
    }
  }

  .navbar-right {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    will-change: transform, opacity;
  }

  .navbar-brand {
    text-decoration: none;
    color: var(--color-text);
    flex-shrink: 0;
    will-change: transform, opacity;
  }

  .navbar-title {
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-size: 1.125rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--color-primary);
  }

  /* Navbar weather info */
  .navbar-weather {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    flex-wrap: nowrap;
  }

  @media (min-width: 1000px) {
    .navbar-weather {
      gap: var(--space-3);
    }
  }

  @media (min-width: 1200px) {
    .navbar-weather {
      gap: var(--space-4);
    }
  }

  .navbar-divider {
    display: none;
    width: 1px;
    height: 16px;
    background: var(--color-border);
    margin: 0 var(--space-1);
  }

  @media (min-width: 1000px) {
    .navbar-divider {
      display: block;
    }
  }

  .navbar-weather-item {
    display: flex;
    align-items: center;
    gap: 4px;
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  @media (min-width: 1000px) {
    .navbar-weather-item {
      gap: 5px;
      font-size: 0.8125rem;
    }
  }

  @media (min-width: 1200px) {
    .navbar-weather-item {
      gap: 6px;
      font-size: 0.875rem;
    }
  }

  .navbar-weather-icon {
    width: 16px;
    height: 16px;
    opacity: 0.6;
  }

  .navbar-weather-item span:last-child {
    font-weight: 600;
    color: var(--color-text);
  }

  a.navbar-train, a.navbar-punctuality {
    text-decoration: none;
    color: inherit;
  }

  .navbar-punctuality {
    gap: 4px !important;
    opacity: 0.85;
    transition: opacity var(--duration-fast) ease;
  }
  .navbar-punctuality:hover { opacity: 1; }

  .punctuality-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--color-muted, #999);
    flex-shrink: 0;
  }
  .punctuality-dot.good { background: #16a34a; }
  .punctuality-dot.mid  { background: #d97706; }
  .punctuality-dot.bad  { background: #dc2626; }
  :root.dark .punctuality-dot.good { background: #4ade80; }
  :root.dark .punctuality-dot.mid  { background: #fbbf24; }
  :root.dark .punctuality-dot.bad  { background: #f87171; }

  .punctuality-value {
    font-size: 0.6875rem;
    font-weight: 600;
    color: var(--color-muted);
    font-variant-numeric: tabular-nums;
  }

  .navbar-train-badge {
    display: inline-flex;
    align-items: center;
    padding: 1px 5px;
    background: #16a34a;
    color: white;
    border-radius: 3px;
    font-size: 0.625rem;
    font-weight: 700;
  }

  .navbar-train-dir {
    display: none;
    font-size: 0.6875rem;
    color: var(--color-muted);
    font-weight: 500;
  }

  @media (min-width: 900px) {
    .navbar-train-dir {
      display: inline;
    }
  }

  :global(.navbar-train-delay) {
    font-size: 0.6875rem;
    color: #dc2626;
    font-weight: 600;
  }

  .navbar .theme-toggle {
    position: relative;
    top: auto;
    right: auto;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    background: var(--color-bg-secondary);
    color: var(--color-text-secondary);
    cursor: pointer;
    border-radius: var(--radius-full);
    transition: all var(--duration-fast) ease;
    flex-shrink: 0;
  }

  .navbar .theme-toggle:hover {
    background: var(--color-border);
    color: var(--color-text);
  }

  /* === HERO HEADER (fixed below navbar) === */
  .header {
    position: relative;
    padding: var(--space-8) var(--space-5) var(--space-6);
    background: linear-gradient(
      165deg,
      var(--color-bg) 0%,
      var(--color-bg-secondary) 50%,
      color-mix(in srgb, var(--color-primary) 5%, var(--color-bg-secondary)) 100%
    );
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .header {
      position: fixed;
      top: 65px; /* Below navbar */
      left: 0;
      right: 0;
      z-index: 95;
      padding: var(--space-5) var(--space-8) var(--space-4);
      border-bottom: 1px solid var(--color-border-light);
      box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }
  }

  :root.dark .header {
    box-shadow: 0 4px 20px rgba(0,0,0,0.25);
  }

  @media (min-width: 640px) and (max-width: 767px) {
    .header {
      padding: var(--space-12) var(--space-8) var(--space-8);
    }
  }

  .header-inner {
    max-width: 900px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .location {
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-size: 0.8125rem;
    font-weight: 500;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--color-primary);
    margin-bottom: var(--space-4);
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .location::before {
    content: '';
    display: inline-block;
    width: 24px;
    height: 2px;
    background: var(--color-primary);
    border-radius: 1px;
  }

  .title {
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 700;
    line-height: 1.05;
    letter-spacing: -0.04em;
    color: var(--color-text);
    margin-bottom: var(--space-6);
  }

  .title-accent {
    color: var(--color-primary);
  }

  .tagline {
    font-size: clamp(1rem, 2.5vw, 1.125rem);
    color: var(--color-text-secondary);
    max-width: 400px;
    line-height: 1.5;
  }

  .header-visual {
    position: absolute;
    top: 0;
    right: -10%;
    width: 50%;
    height: 100%;
    background: radial-gradient(
      ellipse at 70% 30%,
      color-mix(in srgb, var(--color-primary) 8%, transparent) 0%,
      transparent 60%
    );
    pointer-events: none;
  }

  @media (min-width: 768px) {
    .header-visual {
      right: 0;
      width: 40%;
    }
  }

  :root.dark .header {
    background: linear-gradient(
      165deg,
      var(--color-bg) 0%,
      var(--color-bg-secondary) 50%,
      color-mix(in srgb, var(--color-primary) 8%, var(--color-bg-secondary)) 100%
    );
  }

  :root.dark .header-visual {
    background: radial-gradient(
      ellipse at 70% 30%,
      color-mix(in srgb, var(--color-primary) 12%, transparent) 0%,
      transparent 60%
    );
  }

  /* Theme toggle icons */
  .icon-sun,
  .icon-moon {
    width: 20px;
    height: 20px;
    position: absolute;
    transition: all var(--duration-normal) ease;
  }

  .icon-sun {
    opacity: 1;
    transform: rotate(0deg) scale(1);
  }

  .icon-moon {
    opacity: 0;
    transform: rotate(90deg) scale(0.8);
  }

  :root.dark .icon-sun {
    opacity: 0;
    transform: rotate(-90deg) scale(0.8);
  }

  :root.dark .icon-moon {
    opacity: 1;
    transform: rotate(0deg) scale(1);
  }

  @media (prefers-reduced-motion: reduce) {
    .theme-toggle,
    .icon-sun,
    .icon-moon,
    .navbar-weather {
      transition: none;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const toggle = document.getElementById('theme-toggle');
    const root = document.documentElement;
    const navbarBrand = document.querySelector('.navbar-brand');
    const navbarRight = document.querySelector('.navbar-right');

    // Scroll parallax effect for navbar
    if (navbarBrand && navbarRight) {
      var lastScroll = 0;
      var ticking = false;
      
      function updateNavbarParallax() {
        var scrollY = window.scrollY;
        var maxScroll = 300; // Max scroll distance for full effect
        var progress = Math.min(scrollY / maxScroll, 1);
        
        // Move brand left, right section right (no fade)
        navbarBrand.style.transform = 'translateX(' + (-progress * 200) + 'px)';
        navbarRight.style.transform = 'translateX(' + (progress * 300) + 'px)';
        
        ticking = false;
      }
      
      window.addEventListener('scroll', function() {
        if (!ticking) {
          requestAnimationFrame(updateNavbarParallax);
          ticking = true;
        }
      }, { passive: true });
    }

    // Theme toggle
    if (toggle) {
      function updateToggleState() {
        const isDark = root.classList.contains('dark');
        toggle.setAttribute('aria-label', isDark ? 'Zum hellen Modus wechseln' : 'Zum dunklen Modus wechseln');
      }

      toggle.addEventListener('click', function() {
        const isDark = root.classList.toggle('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
        updateToggleState();
      });

      updateToggleState();
    }

    // Load weather data directly
    async function loadWeather() {
      try {
        const res = await fetch(
          'https://api.open-meteo.com/v1/forecast?latitude=47.9983&longitude=11.3397&current=temperature_2m&daily=sunrise,sunset&timezone=Europe%2FBerlin&forecast_days=1'
        );
        if (!res.ok) return;
        const data = await res.json();
        
        const temp = Math.round(data.current?.temperature_2m || 0);
        const sunrise = data.daily?.sunrise?.[0];
        const sunset = data.daily?.sunset?.[0];
        
        const navTemp = document.getElementById('navbar-temp');
        const navSunrise = document.getElementById('navbar-sunrise');
        const navSunset = document.getElementById('navbar-sunset');
        
        if (navTemp) navTemp.textContent = `${temp}°`;
        if (navSunrise && sunrise) {
          navSunrise.textContent = new Date(sunrise).toLocaleTimeString('de-DE', { hour: '2-digit', minute: '2-digit' });
        }
        if (navSunset && sunset) {
          navSunset.textContent = new Date(sunset).toLocaleTimeString('de-DE', { hour: '2-digit', minute: '2-digit' });
        }
      } catch (e) {
        console.error('Weather load failed:', e);
      }
    }

    // Load train data for both directions
    async function loadTrain() {
      try {
        const res = await fetch(
          'https://v6.db.transport.rest/stops/8004874/departures?duration=180&suburban=true'
        );
        if (!res.ok) return;
        const data = await res.json();
        
        const departures = data.departures || [];
        if (departures.length === 0) return;
        
        // Classify direction: Tutzing/Feldafing = south, everything else = München
        function isTutzingDir(d) {
          const dir = (d.direction || '').toLowerCase();
          return dir.includes('tutzing') || dir.includes('feldafing');
        }
        
        const toMunich = departures.find(function(d) { return !isTutzingDir(d); });
        const toTutzing = departures.find(function(d) { return isTutzingDir(d); });
        
        // Update Munich
        if (toMunich) {
          const time = new Date(toMunich.when || toMunich.plannedWhen);
          const navMunich = document.getElementById('navbar-train-munich');
          if (navMunich) {
            var timeStr = time.toLocaleTimeString('de-DE', { hour: '2-digit', minute: '2-digit' });
            if (toMunich.delay && toMunich.delay > 0) {
              timeStr += ' <span class="navbar-train-delay">+' + Math.round(toMunich.delay / 60) + '</span>';
            }
            navMunich.innerHTML = timeStr;
          }
        }
        
        // Update Tutzing
        if (toTutzing) {
          const time = new Date(toTutzing.when || toTutzing.plannedWhen);
          const navTutzing = document.getElementById('navbar-train-tutzing');
          if (navTutzing) {
            var timeStr = time.toLocaleTimeString('de-DE', { hour: '2-digit', minute: '2-digit' });
            if (toTutzing.delay && toTutzing.delay > 0) {
              timeStr += ' <span class="navbar-train-delay">+' + Math.round(toTutzing.delay / 60) + '</span>';
            }
            navTutzing.innerHTML = timeStr;
          }
        }
      } catch (e) {
        console.error('Train load failed:', e);
      }
    }

    // S6 Punctuality from Worker
    async function loadPunctuality() {
      try {
        const resp = await fetch('https://train-tracker.steffenvonlindern-be7.workers.dev/api/stats?period=today');
        if (!resp.ok) return;
        const data = await resp.json();
        const o = data.overall;
        if (!o || o.total === 0) return;

        const onTime = o.on_time || 0;
        const delayed = o.delayed || 0;
        const cancelled = o.cancelled || 0;
        const total = onTime + delayed + cancelled;
        if (total === 0) return;

        const rate = Math.round((onTime / total) * 100);
        const dot = document.getElementById('punctuality-dot');
        const val = document.getElementById('punctuality-value');
        const wrap = document.getElementById('navbar-punctuality');

        if (dot) dot.className = 'punctuality-dot ' + (rate >= 80 ? 'good' : rate >= 60 ? 'mid' : 'bad');
        if (val) val.textContent = rate + '%';
        if (wrap) wrap.style.display = '';
      } catch (e) { /* silent */ }
    }

    loadWeather();
    loadTrain();
    loadPunctuality();
  });
</script>
