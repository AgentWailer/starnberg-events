---
interface Props {
  lastUpdated?: string;
}

const { lastUpdated } = Astro.props;
---

<!-- Desktop: Compact fixed navbar -->
<nav class="navbar" id="navbar">
  <div class="navbar-inner">
    <a href="/" class="navbar-brand">
      <span class="navbar-title">Starnberg Events</span>
    </a>

    <!-- Right side: Weather + Theme Toggle -->
    <div class="navbar-right">
      <!-- Weather info (shows when scrolled) -->
      <div class="navbar-weather" id="navbar-weather">
        <span class="navbar-weather-item">
          <svg class="navbar-weather-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="5"/>
            <line x1="12" y1="1" x2="12" y2="3"/>
            <line x1="12" y1="21" x2="12" y2="23"/>
          </svg>
          <span id="navbar-temp">--°</span>
        </span>
        <span class="navbar-weather-item">
          <svg class="navbar-weather-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2.69l5.66 5.66a8 8 0 1 1-11.31 0z"/>
          </svg>
          <span id="navbar-water">--°</span>
        </span>
        <span class="navbar-weather-item navbar-train">
          <span class="navbar-train-badge">S6</span>
          <span id="navbar-train">--:--</span>
        </span>
      </div>

      <button class="theme-toggle" id="theme-toggle" aria-label="Farbschema wechseln">
      <svg aria-hidden="true" class="icon-sun" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <circle cx="12" cy="12" r="5"></circle>
        <line x1="12" y1="1" x2="12" y2="3"></line>
        <line x1="12" y1="21" x2="12" y2="23"></line>
        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
        <line x1="1" y1="12" x2="3" y2="12"></line>
        <line x1="21" y1="12" x2="23" y2="12"></line>
        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
      </svg>
      <svg aria-hidden="true" class="icon-moon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
      </svg>
    </button>
    </div>
  </div>
</nav>

<!-- Hero section (scrolls with content) -->
<header class="header">
  <div class="header-inner">
    <p class="location">Starnberger See</p>
    <h1 class="title">
      Was ist los<br/>
      <span class="title-accent">in Pöcking?</span>
    </h1>
    <p class="tagline">Events & Veranstaltungen für die ganze Familie</p>
  </div>
  <div class="header-visual" aria-hidden="true"></div>
</header>

<style>
  /* === COMPACT FIXED NAVBAR (Desktop only) === */
  .navbar {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: var(--color-card);
    border-bottom: 1px solid var(--color-border-light);
    box-shadow: 0 2px 12px rgba(0,0,0,0.06);
  }

  @media (min-width: 768px) {
    .navbar {
      display: block;
    }
  }

  :root.dark .navbar {
    box-shadow: 0 2px 12px rgba(0,0,0,0.2);
  }

  .navbar-inner {
    max-width: 1140px;
    margin: 0 auto;
    padding: var(--space-3) var(--space-5);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-4);
  }

  .navbar-right {
    display: flex;
    align-items: center;
    gap: var(--space-4);
  }

  .navbar-brand {
    text-decoration: none;
    color: var(--color-text);
    flex-shrink: 0;
  }

  .navbar-title {
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-size: 1.125rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    color: var(--color-primary);
  }

  /* Navbar weather info */
  .navbar-weather {
    display: flex;
    align-items: center;
    gap: var(--space-5);
    opacity: 0;
    transform: translateY(-5px);
    transition: opacity 0.2s ease, transform 0.2s ease;
    pointer-events: none;
  }

  .navbar-weather.visible {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  .navbar-weather-item {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  .navbar-weather-icon {
    width: 16px;
    height: 16px;
    opacity: 0.6;
  }

  .navbar-weather-item span:last-child {
    font-weight: 600;
    color: var(--color-text);
  }

  .navbar-train-badge {
    display: inline-flex;
    align-items: center;
    padding: 1px 5px;
    background: #16a34a;
    color: white;
    border-radius: 3px;
    font-size: 0.625rem;
    font-weight: 700;
  }

  .navbar .theme-toggle {
    position: relative;
    top: auto;
    right: auto;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    background: var(--color-bg-secondary);
    color: var(--color-text-secondary);
    cursor: pointer;
    border-radius: var(--radius-full);
    transition: all var(--duration-fast) ease;
    flex-shrink: 0;
  }

  .navbar .theme-toggle:hover {
    background: var(--color-border);
    color: var(--color-text);
  }

  /* === HERO HEADER (scrolls with content) === */
  .header {
    position: relative;
    padding: var(--space-16) var(--space-5) var(--space-12);
    background: linear-gradient(
      165deg,
      var(--color-bg) 0%,
      var(--color-bg-secondary) 50%,
      color-mix(in srgb, var(--color-primary) 5%, var(--color-bg-secondary)) 100%
    );
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .header {
      padding: var(--space-12) var(--space-8) var(--space-10);
      margin-top: 56px;
    }
  }

  @media (min-width: 640px) and (max-width: 767px) {
    .header {
      padding: var(--space-20) var(--space-8) var(--space-16);
    }
  }

  .header-inner {
    max-width: 900px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .location {
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-size: 0.8125rem;
    font-weight: 500;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--color-primary);
    margin-bottom: var(--space-4);
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }

  .location::before {
    content: '';
    display: inline-block;
    width: 24px;
    height: 2px;
    background: var(--color-primary);
    border-radius: 1px;
  }

  .title {
    font-size: clamp(2.5rem, 8vw, 4rem);
    font-weight: 700;
    line-height: 1.05;
    letter-spacing: -0.04em;
    color: var(--color-text);
    margin-bottom: var(--space-6);
  }

  .title-accent {
    color: var(--color-primary);
  }

  .tagline {
    font-size: clamp(1rem, 2.5vw, 1.125rem);
    color: var(--color-text-secondary);
    max-width: 400px;
    line-height: 1.5;
  }

  .header-visual {
    position: absolute;
    top: 0;
    right: -10%;
    width: 50%;
    height: 100%;
    background: radial-gradient(
      ellipse at 70% 30%,
      color-mix(in srgb, var(--color-primary) 8%, transparent) 0%,
      transparent 60%
    );
    pointer-events: none;
  }

  @media (min-width: 768px) {
    .header-visual {
      right: 0;
      width: 40%;
    }
  }

  :root.dark .header {
    background: linear-gradient(
      165deg,
      var(--color-bg) 0%,
      var(--color-bg-secondary) 50%,
      color-mix(in srgb, var(--color-primary) 8%, var(--color-bg-secondary)) 100%
    );
  }

  :root.dark .header-visual {
    background: radial-gradient(
      ellipse at 70% 30%,
      color-mix(in srgb, var(--color-primary) 12%, transparent) 0%,
      transparent 60%
    );
  }

  /* Theme toggle icons */
  .icon-sun,
  .icon-moon {
    width: 20px;
    height: 20px;
    position: absolute;
    transition: all var(--duration-normal) ease;
  }

  .icon-sun {
    opacity: 1;
    transform: rotate(0deg) scale(1);
  }

  .icon-moon {
    opacity: 0;
    transform: rotate(90deg) scale(0.8);
  }

  :root.dark .icon-sun {
    opacity: 0;
    transform: rotate(-90deg) scale(0.8);
  }

  :root.dark .icon-moon {
    opacity: 1;
    transform: rotate(0deg) scale(1);
  }

  @media (prefers-reduced-motion: reduce) {
    .theme-toggle,
    .icon-sun,
    .icon-moon,
    .navbar-weather {
      transition: none;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const toggle = document.getElementById('theme-toggle');
    const root = document.documentElement;
    const navbarWeather = document.getElementById('navbar-weather');

    // Theme toggle
    if (toggle) {
      function updateToggleState() {
        const isDark = root.classList.contains('dark');
        toggle.setAttribute('aria-label', isDark ? 'Zum hellen Modus wechseln' : 'Zum dunklen Modus wechseln');
      }

      toggle.addEventListener('click', function() {
        const isDark = root.classList.toggle('dark');
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
        updateToggleState();
      });

      updateToggleState();
    }

    // Show/hide navbar weather on scroll
    if (navbarWeather) {
      const weatherWidget = document.querySelector('.section-weather');
      
      function checkScroll() {
        if (!weatherWidget) {
          navbarWeather.classList.add('visible');
          return;
        }
        
        const rect = weatherWidget.getBoundingClientRect();
        const isHidden = rect.bottom < 60; // Weather widget scrolled out of view
        navbarWeather.classList.toggle('visible', isHidden);
      }

      window.addEventListener('scroll', checkScroll, { passive: true });
      checkScroll();

      // Sync weather data from WeatherWidget to navbar
      const syncInterval = setInterval(() => {
        const weatherTemp = document.getElementById('weather-temp');
        const waterTemp = document.getElementById('water-temp');
        const trainTime = document.getElementById('train-munich');

        if (weatherTemp) {
          const navTemp = document.getElementById('navbar-temp');
          if (navTemp && weatherTemp.textContent !== '--°') {
            navTemp.textContent = weatherTemp.textContent;
          }
        }

        if (waterTemp) {
          const navWater = document.getElementById('navbar-water');
          if (navWater && waterTemp.textContent !== '--°') {
            navWater.textContent = waterTemp.textContent;
          }
        }

        if (trainTime) {
          const navTrain = document.getElementById('navbar-train');
          if (navTrain) {
            // Extract just the time from the train element
            const text = trainTime.textContent || trainTime.innerText || '--:--';
            const timeMatch = text.match(/\d{1,2}:\d{2}/);
            if (timeMatch) {
              navTrain.textContent = timeMatch[0];
            }
          }
        }
      }, 1000);
    }
  });
</script>
