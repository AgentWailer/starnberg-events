---
interface Props {
  lastUpdated: string;
}

const { lastUpdated } = Astro.props;

function formatDate(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString('de-DE', {
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  });
}
---

<header class="header">
  <div class="header-content">
    <h1>Raus ins Voralpenland</h1>
    <p class="tagline">Events & Erlebnisse in Oberbayern</p>
  </div>
</header>

<style>
  .header {
    background: var(--color-bg);
    padding: 32px 16px 24px;
    border-bottom: 1px solid var(--color-border);
  }

  @media (min-width: 640px) {
    .header {
      padding: 40px 24px 32px;
    }
  }

  .header-content {
    max-width: 1200px;
    margin: 0 auto;
  }

  h1 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text);
    letter-spacing: -0.03em;
    line-height: 1.1;
    margin-bottom: 8px;
  }

  @media (min-width: 640px) {
    h1 {
      font-size: 2.75rem;
    }
  }

  .tagline {
    font-size: 1rem;
    color: var(--color-text-secondary);
    font-weight: 400;
  }

  @media (min-width: 640px) {
    .tagline {
      font-size: 1.1rem;
    }
  }
</style>
