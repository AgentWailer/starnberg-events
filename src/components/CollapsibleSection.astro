---
interface Props {
  title: string;
  icon?: string;
  defaultOpen?: boolean;
  id: string;
}

const { title, icon = '', defaultOpen = false, id } = Astro.props;
---

<details class="collapsible" id={id} open={defaultOpen}>
  <summary class="collapsible-header">
    <div class="collapsible-title">
      {icon && <span class="collapsible-icon">{icon}</span>}
      <span>{title}</span>
    </div>
    <svg class="chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="6 9 12 15 18 9"></polyline>
    </svg>
  </summary>
  <div class="collapsible-content">
    <slot />
  </div>
</details>

<style>
  .collapsible {
    background: var(--color-card);
    border-radius: var(--radius-sm);
    border: 1px solid var(--color-border-light);
    overflow: hidden;
    transition: all 0.2s ease;
  }

  .collapsible:hover {
    box-shadow: var(--shadow-sm);
  }

  .collapsible-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 16px;
    cursor: pointer;
    user-select: none;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark, #c2410c) 100%);
    color: white;
    transition: all 0.2s;
  }

  .collapsible-header:hover {
    filter: brightness(1.05);
  }

  .collapsible-title {
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 600;
    font-size: 0.95rem;
    color: white;
  }

  .collapsible-icon {
    font-size: 1.1rem;
  }

  .chevron {
    width: 18px;
    height: 18px;
    color: white;
    opacity: 0.9;
    transition: transform 0.2s ease;
    flex-shrink: 0;
  }

  .collapsible[open] .chevron {
    transform: rotate(180deg);
  }

  .collapsible-content {
    animation: slideDown 0.2s ease-out;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Remove default marker */
  summary {
    list-style: none;
  }

  summary::-webkit-details-marker {
    display: none;
  }

  summary::marker {
    display: none;
  }
</style>

<script define:vars={{ id, defaultOpen }}>
  // Persist open/closed state in localStorage
  const storageKey = `collapsible-${id}`;
  
  document.addEventListener('DOMContentLoaded', () => {
    const details = document.getElementById(id);
    if (!details) return;
    
    // Restore state from localStorage
    const savedState = localStorage.getItem(storageKey);
    if (savedState !== null) {
      details.open = savedState === 'true';
    }
    
    // Save state on toggle
    details.addEventListener('toggle', () => {
      localStorage.setItem(storageKey, details.open.toString());
    });
  });
</script>
