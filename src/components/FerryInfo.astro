---
// Ferry schedule for Starnberger See - Saison 2026
// Source: seenschifffahrt.de

interface Props {
  showFullSchedule?: boolean;
}

const { showFullSchedule = false } = Astro.props;

// Hauptsaison departures from Possenhofen (01.05. - 04.10.2026)
// Possenhofen liegt zwischen Leoni und Tutzing
const departures = [
  { time: "10:50", destination: "Tutzing", arrival: "11:14", direction: "süd" },
  { time: "11:30", destination: "Starnberg", arrival: "12:05", direction: "nord" },
  { time: "11:30", destination: "Tutzing", arrival: "11:54", direction: "süd" },
  { time: "13:55", destination: "Tutzing", arrival: "14:19", direction: "süd" },
  { time: "14:25", destination: "Starnberg", arrival: "15:00", direction: "nord" },
  { time: "15:05", destination: "Tutzing", arrival: "15:29", direction: "süd" },
  { time: "16:30", destination: "Starnberg", arrival: "17:05", direction: "nord" },
];

// Rundfahrten (tours)
const tours = [
  { name: "Große Rundfahrt", duration: "3h 40min", desc: "Komplette Seeumrundung" },
  { name: "Nördliche Rundfahrt", duration: "2h", desc: "Starnberg → Tutzing" },
  { name: "Kurzrundfahrt", duration: "1h", desc: "Nordbereich" },
];

// Season info
const seasons = [
  { name: "Vorsaison", dates: "05.04. - 30.04.", note: "täglich" },
  { name: "Hauptsaison", dates: "01.05. - 04.10.", note: "täglich", active: true },
  { name: "Nachsaison", dates: "05.10. - 18.10.", note: "täglich" },
];
---

<div class="ferry-widget">
  <div class="ferry-header">
    <div class="ferry-title">
      <svg class="ferry-logo" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M2 21c.6.5 1.2 1 2.5 1 2.5 0 2.5-2 5-2 1.3 0 1.9.5 2.5 1 .6.5 1.2 1 2.5 1 2.5 0 2.5-2 5-2 1.3 0 1.9.5 2.5 1"/>
        <path d="M19.38 20A11.6 11.6 0 0 0 21 14l-9-4-9 4c0 2.9.94 5.34 2.81 7.76"/>
        <path d="M19 13V7a2 2 0 0 0-2-2H7a2 2 0 0 0-2 2v6"/>
        <path d="M12 10v4"/>
        <path d="M12 2v3"/>
      </svg>
      <span>Schiff Possenhofen</span>
    </div>
    <a href="https://www.seenschifffahrt.de/de/starnberger-see/fahrplan/fahrplan/" target="_blank" class="ferry-link">
      Fahrplan
      <svg class="icon-sm" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
        <polyline points="15 3 21 3 21 9"></polyline>
        <line x1="10" y1="14" x2="21" y2="3"></line>
      </svg>
    </a>
  </div>
  
  <div class="ferry-body">
    <!-- Season Badge -->
    <div class="season-info">
      <span class="season-badge">Saison 2026</span>
      <span class="season-dates">Hauptsaison: 01.05. - 04.10.</span>
    </div>

    <!-- Next Departures from Possenhofen -->
    <div class="departures-section">
      <h4 class="section-title">Ab Possenhofen</h4>
      <div class="departures-grid">
        {departures.slice(0, 6).map((dep, i) => (
          <div class="departure-row" style={`--row-bg: ${i % 2 === 0 ? 'var(--color-card)' : 'var(--color-bg)'}`}>
            <span class="dep-time">{dep.time}</span>
            <span class={`dep-direction ${dep.direction}`}>{dep.direction === 'süd' ? '↓' : '↑'}</span>
            <span class="dep-dest">{dep.destination}</span>
            <span class="dep-arrival">{dep.arrival ? `an ${dep.arrival}` : ''}</span>
          </div>
        ))}
      </div>
    </div>

    <!-- Tour Options -->
    <div class="tours-section">
      <h4 class="section-title">Rundfahrten</h4>
      <div class="tours-list">
        {tours.map(tour => (
          <div class="tour-item">
            <span class="tour-name">{tour.name}</span>
            <span class="tour-duration">{tour.duration}</span>
          </div>
        ))}
      </div>
    </div>

    <!-- Contact -->
    <div class="contact-info">
      <a href="tel:+4981518061" class="contact-link">
        <svg class="icon-xs" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
        </svg>
        08151 8061
      </a>
      <span class="contact-divider">•</span>
      <span class="contact-note">Bei Nebel/Sturm: Ausfälle möglich</span>
    </div>
  </div>
</div>

<style>
  .ferry-widget {
    background: var(--color-card);
    border-radius: var(--radius-sm);
    overflow: hidden;
    border: 1px solid var(--color-border-light);
    transition: all 0.2s ease;
  }

  .ferry-widget:hover {
    box-shadow: var(--shadow-md);
  }

  .ferry-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 16px;
    background: linear-gradient(135deg, #0284c7 0%, #0369a1 100%);
    color: white;
  }

  .ferry-title {
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 600;
    font-size: 0.95rem;
  }

  .ferry-logo {
    width: 22px;
    height: 22px;
    stroke: white;
  }

  .icon-sm {
    width: 14px;
    height: 14px;
  }

  .icon-xs {
    width: 12px;
    height: 12px;
  }

  .ferry-link {
    color: white;
    opacity: 0.9;
    font-size: 0.8rem;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 4px 10px;
    background: rgba(255,255,255,0.15);
    border-radius: var(--radius-full);
    transition: all 0.2s;
  }

  .ferry-link:hover {
    opacity: 1;
    background: rgba(255,255,255,0.25);
    text-decoration: none;
  }

  .ferry-body {
    padding: 0;
  }

  .season-info {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    background: var(--color-bg);
    border-bottom: 1px solid var(--color-border);
  }

  .season-badge {
    background: var(--color-primary);
    color: white;
    padding: 2px 8px;
    border-radius: var(--radius-full);
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.3px;
  }

  .season-dates {
    font-size: 0.8rem;
    color: var(--color-text-secondary);
  }

  .departures-section {
    padding: 0;
  }

  .section-title {
    font-size: 0.7rem;
    font-weight: 600;
    color: var(--color-muted);
    text-transform: uppercase;
    letter-spacing: 0.3px;
    padding: 10px 16px;
    margin: 0;
    background: var(--color-bg);
    border-bottom: 1px solid var(--color-border);
  }

  .departures-grid {
    display: flex;
    flex-direction: column;
  }

  .departure-row {
    display: grid;
    grid-template-columns: auto auto 1fr auto;
    gap: 8px;
    padding: 10px 16px;
    background: var(--row-bg);
    border-bottom: 1px solid var(--color-border);
    align-items: center;
  }

  .dep-time {
    font-weight: 600;
    color: var(--color-primary);
    font-size: 0.9rem;
  }

  .dep-direction {
    font-size: 0.9rem;
    width: 20px;
    text-align: center;
  }

  .dep-direction.süd {
    color: #0284c7;
  }

  .dep-direction.nord {
    color: #16a34a;
  }

  .dep-dest {
    font-weight: 500;
    color: var(--color-text);
    font-size: 0.85rem;
  }

  .dep-arrival {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  .tours-section {
    border-top: 1px solid var(--color-border);
  }

  .tours-list {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    padding: 12px 16px;
  }

  .tour-item {
    display: flex;
    align-items: center;
    gap: 6px;
    background: var(--color-bg);
    padding: 6px 12px;
    border-radius: var(--radius-full);
    font-size: 0.8rem;
  }

  .tour-name {
    font-weight: 500;
    color: var(--color-text);
  }

  .tour-duration {
    color: var(--color-text-secondary);
    font-size: 0.75rem;
  }

  .contact-info {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 16px;
    background: var(--color-bg);
    border-top: 1px solid var(--color-border);
    font-size: 0.75rem;
    color: var(--color-muted);
  }

  .contact-link {
    display: flex;
    align-items: center;
    gap: 4px;
    color: var(--color-primary);
    font-weight: 500;
  }

  .contact-link:hover {
    text-decoration: underline;
  }

  .contact-divider {
    color: var(--color-border);
  }

  .contact-note {
    font-style: italic;
  }

  @media (max-width: 480px) {
    .season-info {
      flex-direction: column;
      align-items: flex-start;
      gap: 6px;
    }
    
    .contact-info {
      flex-wrap: wrap;
    }
  }
</style>
