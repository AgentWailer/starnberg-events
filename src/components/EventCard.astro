---
interface Props {
  event: {
    id: number;
    title: string;
    date: string;
    time?: string;
    location: string;
    description?: string;
    category: string;
    artTags?: string[];
    url?: string;
    source?: string;
    region?: string;
    isHighlight?: boolean;
    aiCuration?: {
      scores: { family: number; kids: number; adults: number; uniqueness: number; overall: number };
      ageRange?: string;
      bestFor?: string;
      aiSummary?: string;
      aiTags?: string[];
      priceInfo?: string;
      tips?: string;
    };
  };
  regions?: Record<string, { name: string; emoji: string }>;
  artTagsData?: Record<string, { name: string; emoji: string }>;
}

const { event, regions = {}, artTagsData = {} } = Astro.props;

const date = new Date(event.date);
const day = date.getDate();
const monthShort = date.toLocaleDateString('de-DE', { month: 'short' });
const weekday = date.toLocaleDateString('de-DE', { weekday: 'short' });

const categoryLabels: Record<string, string> = {
  kinder: 'Kinder',
  familie: 'Familie',
  erwachsene: 'Erwachsene'
};

const catLabel = categoryLabels[event.category] || 'Familie';
---

<article 
  class="event-card"
  data-category={event.category}
  data-region={event.region}
  data-location={event.location}
  data-art-tags={event.artTags?.join(',')}
  data-search-text={`${event.title} ${event.location} ${event.description || ''}`.toLowerCase()}
  data-date={event.date}
  data-event-id={event.id}
  data-event-title={event.title}
  data-event-time={event.time}
  data-event-description={event.description}
  data-event-address={event.address}
  data-event-url={event.url}
  data-highlight={event.isHighlight ? 'true' : 'false'}
  data-ai-summary={event.aiCuration?.aiSummary}
  data-ai-best-for={event.aiCuration?.bestFor}
  data-ai-score={event.aiCuration?.scores?.overall}
  data-ai-price={event.aiCuration?.priceInfo}
  data-ai-tips={event.aiCuration?.tips}
  data-ai-age-range={event.aiCuration?.ageRange}
  data-ai-family-score={event.aiCuration?.scores?.family}
  data-ai-kids-score={event.aiCuration?.scores?.kids}
  data-ai-adults-score={event.aiCuration?.scores?.adults}
>
  <!-- Favorite Heart Icon -->
  <button class="favorite-btn" data-event-id={event.id} aria-label="Zu Favoriten hinzuf端gen" title="Zu Favoriten hinzuf端gen">
    <svg class="heart-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
    </svg>
  </button>

  <button class="card-link" data-event-card-btn>
    <div class="card-date">
      <span class="date-day">{day}.{date.getMonth() + 1}.</span>
      <span class="date-weekday">{weekday}</span>
    </div>
    
    <div class="card-body">
      <div class="card-header">
        <span class="card-category" data-cat={event.category}>{catLabel}</span>
        {event.time && <span class="card-time">{event.time} Uhr</span>}
      </div>
      
      <h3 class="card-title">{event.title}</h3>
      
      {event.artTags && event.artTags.length > 0 && (
        <div class="card-art-tags">
          {event.artTags.map(tag => {
            const tagData = artTagsData[tag];
            return tagData ? (
              <span class="art-tag" data-tag={tag}>
                {tagData.emoji} {tagData.name}
              </span>
            ) : null;
          })}
        </div>
      )}
      
      <div class="card-footer">
        <span class="card-location">
          <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
          {event.location}
        </span>
      </div>
    </div>

  </button>
</article>

<style>
  .event-card {
    position: relative;
    background: var(--color-card);
    border-radius: var(--radius-lg);
    overflow: clip;
    transition: 
      transform var(--duration-normal) ease,
      box-shadow var(--duration-normal) ease;
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--color-border-light);
  }

  @media (hover: hover) {
    .event-card:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-md);
    }

    .event-card:hover .card-title {
      color: var(--color-primary);
    }
  }

  .event-card:active {
    transform: scale(0.99);
  }

  /* Favorite Button */
  .favorite-btn {
    position: absolute;
    top: var(--space-4);
    right: var(--space-4);
    width: 44px;
    height: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.95);
    border: 1px solid var(--color-border-light);
    border-radius: var(--radius-full);
    cursor: pointer;
    z-index: 10;
    transition: all var(--duration-fast) ease;
    box-shadow: var(--shadow-sm);
  }

  .favorite-btn:hover {
    transform: scale(1.1);
    box-shadow: var(--shadow-md);
  }

  .favorite-btn:active {
    transform: scale(0.95);
  }

  .heart-icon {
    width: 20px;
    height: 20px;
    stroke: var(--color-muted);
    transition: all var(--duration-fast) ease;
  }

  .favorite-btn.is-favorite .heart-icon {
    fill: #e74c3c;
    stroke: #e74c3c;
  }

  .card-link {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: var(--space-4);
    padding: var(--space-5);
    color: inherit;
    text-decoration: none;
    align-items: start;
    min-height: var(--touch-target-min);
    width: 100%;
    background: none;
    border: none;
    text-align: left;
    cursor: pointer;
    font-family: inherit;
  }

  @media (min-width: 640px) {
    .card-link {
      padding: var(--space-6);
      gap: var(--space-5);
    }
  }

  /* Date Column */
  .card-date {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 44px;
    padding: var(--space-2) var(--space-3);
    background: var(--color-bg-secondary);
    border-radius: var(--radius-md);
    text-align: center;
  }

  .date-day {
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-size: 1.125rem;
    font-weight: 700;
    line-height: 1;
    color: var(--color-primary);
  }

  .date-weekday {
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-muted);
    margin-top: 3px;
  }

  /* Body Column */
  .card-body {
    min-width: 0;
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-2);
  }

  .card-category {
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: var(--space-1) var(--space-2);
    border-radius: var(--radius-sm);
    background: var(--color-bg-secondary);
    color: var(--color-muted);
  }

  .card-category[data-cat="kinder"] {
    background: color-mix(in srgb, var(--color-kinder) 12%, transparent);
    color: var(--color-kinder);
  }

  .card-category[data-cat="familie"] {
    background: color-mix(in srgb, var(--color-familie) 12%, transparent);
    color: var(--color-familie);
  }

  .card-category[data-cat="erwachsene"] {
    background: color-mix(in srgb, var(--color-erwachsene) 12%, transparent);
    color: var(--color-erwachsene);
  }

  .card-time {
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
    font-weight: 500;
  }

  .card-title {
    font-size: 1rem;
    font-weight: 600;
    line-height: 1.35;
    color: var(--color-text);
    margin-bottom: var(--space-3);
    transition: color var(--duration-fast) ease;
    /* Clamp to 2 lines */
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (min-width: 640px) {
    .card-title {
      font-size: 1.0625rem;
    }
  }

  /* Art Tags */
  .card-art-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-bottom: var(--space-3);
  }

  .art-tag {
    display: inline-flex;
    align-items: center;
    font-size: 0.6875rem;
    padding: 3px 8px;
    border-radius: var(--radius-full);
    background: var(--color-bg-secondary);
    color: var(--color-text-secondary);
    font-weight: 500;
    white-space: nowrap;
  }

  .card-footer {
    display: flex;
    align-items: center;
  }

  .card-location {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    font-size: 0.8125rem;
    color: var(--color-muted);
  }

  .icon {
    width: 14px;
    height: 14px;
    flex-shrink: 0;
    opacity: 0.6;
  }

</style>

<script>
  // Favorites functionality
  const FAVORITES_KEY = 'starnberg-events-favorites';

  function getFavorites(): Set<number> {
    try {
      const data = localStorage.getItem(FAVORITES_KEY);
      return data ? new Set(JSON.parse(data)) : new Set();
    } catch {
      return new Set();
    }
  }

  function saveFavorites(favorites: Set<number>) {
    try {
      localStorage.setItem(FAVORITES_KEY, JSON.stringify([...favorites]));
      // Dispatch custom event for filter bar to update count
      window.dispatchEvent(new CustomEvent('favoritesChanged', { 
        detail: { count: favorites.size, favorites: [...favorites] } 
      }));
    } catch (e) {
      console.error('Could not save favorites', e);
    }
  }

  function toggleFavorite(eventId: number): boolean {
    const favorites = getFavorites();
    if (favorites.has(eventId)) {
      favorites.delete(eventId);
    } else {
      favorites.add(eventId);
    }
    saveFavorites(favorites);
    return favorites.has(eventId);
  }

  // Initialize favorites on page load
  document.addEventListener('DOMContentLoaded', () => {
    const favorites = getFavorites();
    
    // Update all favorite buttons
    document.querySelectorAll('.favorite-btn').forEach(btn => {
      const eventId = parseInt((btn as HTMLElement).dataset.eventId || '0');
      if (favorites.has(eventId)) {
        btn.classList.add('is-favorite');
        btn.setAttribute('aria-label', 'Von Favoriten entfernen');
        btn.setAttribute('title', 'Von Favoriten entfernen');
      }
    });

    // Add click handlers to favorite buttons
    document.querySelectorAll('.favorite-btn').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation(); // Prevent card click
        const eventId = parseInt((btn as HTMLElement).dataset.eventId || '0');
        const isFavorite = toggleFavorite(eventId);
        
        btn.classList.toggle('is-favorite', isFavorite);
        if (isFavorite) {
          btn.setAttribute('aria-label', 'Von Favoriten entfernen');
          btn.setAttribute('title', 'Von Favoriten entfernen');
        } else {
          btn.setAttribute('aria-label', 'Zu Favoriten hinzuf端gen');
          btn.setAttribute('title', 'Zu Favoriten hinzuf端gen');
        }
      });
    });

    // Add click handlers to card buttons (open modal)
    document.querySelectorAll('[data-event-card-btn]').forEach(btn => {
      btn.addEventListener('click', () => {
        const card = btn.closest('.event-card') as HTMLElement;
        if (!card) return;

        const eventData = {
          id: card.dataset.eventId,
          title: card.dataset.eventTitle,
          date: card.dataset.date,
          time: card.dataset.eventTime,
          location: card.dataset.location,
          address: card.dataset.eventAddress,
          description: card.dataset.eventDescription,
          category: card.dataset.category,
          url: card.dataset.eventUrl,
          tags: card.dataset.artTags?.split(',').filter(Boolean) || [],
          // AI curation data
          aiSummary: card.dataset.aiSummary || '',
          aiBestFor: card.dataset.aiBestFor || '',
          aiScore: parseInt(card.dataset.aiScore || '0'),
          aiPrice: card.dataset.aiPrice || '',
          aiTips: card.dataset.aiTips || '',
          aiAgeRange: card.dataset.aiAgeRange || '',
          aiFamilyScore: parseInt(card.dataset.aiFamilyScore || '0'),
          aiKidsScore: parseInt(card.dataset.aiKidsScore || '0'),
          aiAdultsScore: parseInt(card.dataset.aiAdultsScore || '0'),
        };

        // Call global function from EventModal
        if (typeof (window as any).openEventModal === 'function') {
          (window as any).openEventModal(eventData);
        }
      });
    });
  });

  // Export for filter bar
  (window as any).getFavorites = getFavorites;
</script>
