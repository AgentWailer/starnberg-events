---
interface Props {
  event: {
    id: number;
    title: string;
    date: string;
    time?: string;
    location: string;
    description?: string;
    category: string;
    tags?: string[];
    url?: string;
    source?: string;
    region?: string;
    isHighlight?: boolean;
  };
  regions?: Record<string, { name: string; emoji: string }>;
}

const { event, regions = {} } = Astro.props;

const date = new Date(event.date);
const day = date.getDate();
const monthShort = date.toLocaleDateString('de-DE', { month: 'short' });

const categoryConfig = {
  kinder: { label: 'Kinder' },
  familie: { label: 'Familie' },
  erwachsene: { label: 'Erwachsene' }
};

const cat = categoryConfig[event.category as keyof typeof categoryConfig] || categoryConfig.familie;
const dateStr = `${day}. ${monthShort}`;
---

<article 
  class="event-card"
  data-category={event.category}
  data-region={event.region}
  data-location={event.location}
>
  <a href={event.url || '#'} target={event.url ? "_blank" : undefined} rel="noopener" class="card-link">
    <div class="accent-bar" data-cat={event.category}></div>
    
    <div class="card-content">
      <div class="card-meta">
        <span class="location">
          <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
          {event.location}
        </span>
      </div>
      
      <h3 class="title">{event.title}</h3>
      
      <div class="card-info">
        <span class="date">
          <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
          {dateStr}{event.time && ` Â· ${event.time}`}
        </span>
        <span class="category">
          {event.category === 'kinder' && (
            <!-- Baby/Child icon -->
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12h.01M15 12h.01M10 16c.5.3 1.2.5 2 .5s1.5-.2 2-.5"></path>
              <circle cx="12" cy="12" r="10"></circle>
            </svg>
          )}
          {event.category === 'familie' && (
            <!-- Family/Users icon -->
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
          )}
          {event.category === 'erwachsene' && (
            <!-- Ticket/Theater icon -->
            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M2 12a5 5 0 0 0 5 5 5 5 0 0 0 5-5 5 5 0 0 0 5 5 5 5 0 0 0 5-5V4H2v8z"></path>
              <path d="M2 12v8h20v-8"></path>
            </svg>
          )}
          {cat.label}
        </span>
      </div>
    </div>
  </a>
</article>

<style>
  .event-card {
    background: var(--color-card);
    border-radius: var(--radius-sm);
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    border: 1px solid var(--color-border-light);
  }

  .event-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .card-link {
    display: block;
    color: inherit;
    text-decoration: none;
  }

  .accent-bar {
    height: 4px;
    background: var(--color-border);
  }

  .accent-bar[data-cat="kinder"] {
    background: var(--color-kinder);
  }

  .accent-bar[data-cat="familie"] {
    background: var(--color-familie);
  }

  .accent-bar[data-cat="erwachsene"] {
    background: var(--color-erwachsene);
  }

  .card-content {
    padding: 16px;
  }

  @media (min-width: 640px) {
    .card-content {
      padding: 20px;
    }
  }

  .card-meta {
    margin-bottom: 8px;
  }

  .icon {
    width: 14px;
    height: 14px;
    flex-shrink: 0;
  }

  .location {
    font-size: 12px;
    color: var(--color-text-secondary);
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .title {
    font-size: 14px;
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.4;
    margin-bottom: 12px;
  }

  @media (min-width: 640px) {
    .title {
      font-size: 15px;
    }
  }

  .card-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 12px;
    color: var(--color-muted);
  }

  .date, .category {
    display: flex;
    align-items: center;
    gap: 5px;
    font-weight: 500;
  }
</style>
