---
interface Props {
  events: any[];
  regions: Record<string, { name: string; emoji: string }>;
}

const { events, regions } = Astro.props;

// Count events by category
const counts = {
  kinder: events.filter(e => e.category === 'kinder').length,
  familie: events.filter(e => e.category === 'familie').length,
  erwachsene: events.filter(e => e.category === 'erwachsene').length,
};

// Count by region
const regionCounts: Record<string, number> = {};
Object.keys(regions).forEach(r => {
  regionCounts[r] = events.filter(e => e.region === r).length;
});

// Unique locations
const locations = [...new Set(events.map(e => e.location))].sort();
---

<!-- Desktop Sidebar -->
<aside class="filter-sidebar" id="filter-sidebar">
  <div class="filter-section">
    <h3 class="filter-section-title">Kategorie</h3>
    <div class="filter-chips" role="group" aria-label="Filter nach Kategorie">
      <button class="chip active" data-filter="all" data-type="category">Alle</button>
      <button class="chip" data-filter="kinder" data-type="category">
        Kinder <span class="chip-count">{counts.kinder}</span>
      </button>
      <button class="chip" data-filter="familie" data-type="category">
        Familie <span class="chip-count">{counts.familie}</span>
      </button>
      <button class="chip" data-filter="erwachsene" data-type="category">
        Erwachsene <span class="chip-count">{counts.erwachsene}</span>
      </button>
    </div>
  </div>

  <div class="filter-section">
    <h3 class="filter-section-title">Region</h3>
    <div class="filter-chips" role="group" aria-label="Filter nach Region">
      <button class="chip active" data-filter="all" data-type="region">Alle</button>
      {Object.entries(regions).map(([id, region]) => (
        regionCounts[id] > 0 && (
          <button class="chip" data-filter={id} data-type="region">
            {region.emoji} {region.name} <span class="chip-count">{regionCounts[id]}</span>
          </button>
        )
      ))}
    </div>
  </div>

  <div class="filter-section">
    <h3 class="filter-section-title">Ort</h3>
    <select class="filter-select" id="location-filter">
      <option value="all">Alle Orte</option>
      {locations.map(loc => (
        <option value={loc}>{loc}</option>
      ))}
    </select>
  </div>

  <button class="clear-filters" id="clear-filters">
    <svg aria-hidden="true" class="clear-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M3 6h18M19 6v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6m3 0V4a2 2 0 012-2h4a2 2 0 012 2v2"/>
    </svg>
    <span>Filter zurücksetzen</span>
  </button>
  
  <div id="filter-status" aria-live="polite" class="sr-only"></div>
</aside>

<!-- Mobile: Fixed bottom filter bar -->
<div class="mobile-filter-bar" id="mobile-filter-bar">
  <div class="mobile-filter-row">
    <button class="mobile-pill active" data-filter="all" data-type="category">Alle</button>
    <button class="mobile-pill" data-filter="kinder" data-type="category">Kinder</button>
    <button class="mobile-pill" data-filter="familie" data-type="category">Familie</button>
    <button class="mobile-pill" data-filter="erwachsene" data-type="category">Erwachsene</button>
    <button class="mobile-pill mobile-more" id="mobile-more-btn">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="4" y1="21" x2="4" y2="14"></line>
        <line x1="4" y1="10" x2="4" y2="3"></line>
        <line x1="12" y1="21" x2="12" y2="12"></line>
        <line x1="12" y1="8" x2="12" y2="3"></line>
        <line x1="20" y1="21" x2="20" y2="16"></line>
        <line x1="20" y1="12" x2="20" y2="3"></line>
        <line x1="1" y1="14" x2="7" y2="14"></line>
        <line x1="9" y1="8" x2="15" y2="8"></line>
        <line x1="17" y1="16" x2="23" y2="16"></line>
      </svg>
    </button>
  </div>
</div>

<!-- Mobile: Filter Bottom Sheet -->
<div class="filter-sheet-backdrop" id="filter-sheet-backdrop"></div>
<div class="filter-sheet" id="filter-sheet">
  <div class="filter-sheet-handle"></div>
  <div class="filter-sheet-header">
    <h3>Weitere Filter</h3>
    <button class="filter-sheet-close" id="filter-sheet-close">
      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  </div>
  
  <div class="filter-sheet-content">
    <div class="filter-section">
      <h4 class="filter-section-title">Region</h4>
      <div class="filter-chips" id="mobile-region-chips">
        <button class="chip active" data-filter="all" data-type="region">Alle</button>
        {Object.entries(regions).map(([id, region]) => (
          regionCounts[id] > 0 && (
            <button class="chip" data-filter={id} data-type="region">
              {region.emoji} {region.name}
            </button>
          )
        ))}
      </div>
    </div>

    <div class="filter-section">
      <h4 class="filter-section-title">Ort</h4>
      <select class="filter-select" id="mobile-location-filter">
        <option value="all">Alle Orte</option>
        {locations.map(loc => (
          <option value={loc}>{loc}</option>
        ))}
      </select>
    </div>

    <button class="filter-sheet-apply" id="filter-sheet-apply">
      Filter anwenden
    </button>

    <button class="filter-sheet-reset" id="filter-sheet-reset">
      Alle Filter zurücksetzen
    </button>
  </div>
</div>

<style>
  /* === DESKTOP SIDEBAR === */
