---
interface Props {
  events: any[];
  regions: Record<string, { name: string; emoji: string }>;
  artTags: Record<string, { name: string; emoji: string }>;
}

const { events, regions, artTags } = Astro.props;

// Count events by category
const counts = {
  kinder: events.filter(e => e.category === 'kinder').length,
  familie: events.filter(e => e.category === 'familie').length,
  erwachsene: events.filter(e => e.category === 'erwachsene').length,
};

const highlightCount = events.filter(e => e.isHighlight).length;

// Count by region
const regionCounts: Record<string, number> = {};
Object.keys(regions).forEach(r => {
  regionCounts[r] = events.filter(e => e.region === r).length;
});

// Count by art tag
const artTagCounts: Record<string, number> = {};
Object.keys(artTags).forEach(tag => {
  artTagCounts[tag] = events.filter(e => e.artTags?.includes(tag)).length;
});

// Unique locations
const locations = [...new Set(events.map(e => e.location))].sort();
