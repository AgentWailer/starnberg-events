                      !activeArtTags.has('all') || 
                      activeLocation !== 'all' || 
                      activeTimeFilter !== 'all' ||
                      searchQuery !== '' ||
                      favoritesOnly ||
                      highlightsOnly;
    clearBtnDesktop?.classList.toggle('visible', hasFilters);
    updateMoreBtnState();
  }

