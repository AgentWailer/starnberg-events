      const isHighlight = el.dataset.highlight === 'true';

      const matchCat = activeCategories.has('all') || activeCategories.has(cat);
      const matchReg = activeRegions.has('all') || activeRegions.has(reg);
      const matchLoc = activeLocation === 'all' || loc === activeLocation;
      const matchArtTag = activeArtTags.has('all') || 
                         artTagsArr.some(tag => activeArtTags.has(tag));
      const matchTime = matchesTimeFilter(eventDate || new Date().toISOString().split('T')[0]);
      const matchSearch = searchQuery === '' || searchText.includes(searchQuery.toLowerCase());
      const matchFavorite = !favoritesOnly || userFavorites.has(eventId);
      const matchHighlight = !highlightsOnly || isHighlight;

      if (matchCat && matchReg && matchLoc && matchArtTag && matchTime && matchSearch && matchFavorite && matchHighlight) {
        el.style.display = '';
        count++;
      } else {
        el.style.display = 'none';
      }
    });

    if (countEl) countEl.textContent = String(count);
    
    const hasFilters = !activeCategories.has('all') || 
