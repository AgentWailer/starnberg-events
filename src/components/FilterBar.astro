    background: var(--color-bg-secondary);
    color: var(--color-text);
  }

  .filter-sheet-close svg {
    width: 24px;
    height: 24px;
  }

  .filter-sheet-content {
    padding: var(--space-5);
    padding-bottom: calc(var(--space-5) + env(safe-area-inset-bottom, 0));
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  .filter-sheet-content .filter-section-title {
    font-size: 0.75rem;
    margin-bottom: var(--space-2);
  }

  .filter-sheet-content .filter-chips {
    gap: var(--space-2);
  }

  .filter-sheet-content .chip {
    padding: var(--space-3) var(--space-4);
    font-size: 0.875rem;
  }

  .filter-sheet-apply {
