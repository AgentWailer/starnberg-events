    padding: var(--space-4);
    background: var(--color-primary);
    color: white;
    border: none;
    border-radius: var(--radius-md);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: opacity var(--duration-fast) ease;
  }

  .filter-sheet-apply:active {
    opacity: 0.9;
  }

  .filter-sheet-reset {
    width: 100%;
    padding: var(--space-3);
    background: none;
    color: var(--color-muted);
    border: none;
    font-size: 0.875rem;
    cursor: pointer;
    text-decoration: underline;
  }

  @media (min-width: 1200px) {
    .filter-sheet,
    .filter-sheet-backdrop {
      display: none !important;
    }
  }

  /* Space for fixed bottom bar on mobile */
  @media (max-width: 1199px) {
    :global(body) {
      padding-bottom: 80px;
    }
  }
</style>

<script>
  // State
  let activeCategories: Set<string> = new Set(['all']);
  let activeRegions: Set<string> = new Set(['all']);
  let activeLocation = 'all';

  // Elements
  const eventCards = document.querySelectorAll('.event-card');
  const countEl = document.getElementById('visible-count');
  
  // Desktop
  const clearBtnDesktop = document.getElementById('clear-filters');
  const locationSelect = document.getElementById('location-filter') as HTMLSelectElement;
  const categoryChips = document.querySelectorAll('.filter-sidebar .chip[data-type="category"]');
  const regionChips = document.querySelectorAll('.filter-sidebar .chip[data-type="region"]');

  // Mobile
  const mobilePills = document.querySelectorAll('.mobile-filter-bar .mobile-pill[data-type="category"]');
  const moreBtn = document.getElementById('mobile-more-btn');
  const sheet = document.getElementById('filter-sheet');
  const backdrop = document.getElementById('filter-sheet-backdrop');
  const closeBtn = document.getElementById('filter-sheet-close');
  const applyBtn = document.getElementById('filter-sheet-apply');
  const resetBtn = document.getElementById('filter-sheet-reset');
  const mobileRegionChips = document.querySelectorAll('#mobile-region-chips .chip');
  const mobileLocationSelect = document.getElementById('mobile-location-filter') as HTMLSelectElement;

  function updateMoreBtnState() {
    const hasExtraFilters = !activeRegions.has('all') || activeLocation !== 'all';
    moreBtn?.classList.toggle('has-filters', hasExtraFilters);
  }

  function filterEvents() {
    let count = 0;
    eventCards.forEach(card => {
      const el = card as HTMLElement;
      const cat = el.dataset.category || '';
      const reg = el.dataset.region || '';
      const loc = el.dataset.location || '';

      const matchCat = activeCategories.has('all') || activeCategories.has(cat);
      const matchReg = activeRegions.has('all') || activeRegions.has(reg);
      const matchLoc = activeLocation === 'all' || loc === activeLocation;

      if (matchCat && matchReg && matchLoc) {
        el.style.display = '';
        count++;
      } else {
        el.style.display = 'none';
      }
    });

    if (countEl) countEl.textContent = String(count);
    
    const hasFilters = !activeCategories.has('all') || !activeRegions.has('all') || activeLocation !== 'all';
    clearBtnDesktop?.classList.toggle('visible', hasFilters);
    updateMoreBtnState();
  }

  function clearAllFilters() {
    activeCategories = new Set(['all']);
    activeRegions = new Set(['all']);
    activeLocation = 'all';

    // Update all UI
    categoryChips.forEach(c => c.classList.toggle('active', (c as HTMLElement).dataset.filter === 'all'));
    regionChips.forEach(c => c.classList.toggle('active', (c as HTMLElement).dataset.filter === 'all'));
    mobilePills.forEach(p => p.classList.toggle('active', (p as HTMLElement).dataset.filter === 'all'));
    mobileRegionChips.forEach(c => c.classList.toggle('active', (c as HTMLElement).dataset.filter === 'all'));
    if (locationSelect) locationSelect.value = 'all';
    if (mobileLocationSelect) mobileLocationSelect.value = 'all';

    filterEvents();
  }

  function openSheet() {
    sheet?.classList.add('visible');
    backdrop?.classList.add('visible');
    document.body.style.overflow = 'hidden';
  }

  function closeSheet() {
    sheet?.classList.remove('visible');
    backdrop?.classList.remove('visible');
    document.body.style.overflow = '';
  }

  // Desktop: Multi-select for categories
  categoryChips.forEach(chip => {
    chip.addEventListener('click', () => {
      const filter = (chip as HTMLElement).dataset.filter || 'all';

      if (filter === 'all') {
        activeCategories = new Set(['all']);
        categoryChips.forEach(c => c.classList.remove('active'));
        chip.classList.add('active');
      } else {
        activeCategories.delete('all');
        if (activeCategories.has(filter)) {
          activeCategories.delete(filter);
          chip.classList.remove('active');
        } else {
          activeCategories.add(filter);
          chip.classList.add('active');
        }
        if (activeCategories.size === 0) {
          activeCategories.add('all');
          categoryChips.forEach(c => c.classList.toggle('active', (c as HTMLElement).dataset.filter === 'all'));
        } else {
          categoryChips.forEach(c => {
            if ((c as HTMLElement).dataset.filter === 'all') c.classList.remove('active');
          });
        }
      }

      // Sync mobile
      mobilePills.forEach(p => {
        const f = (p as HTMLElement).dataset.filter || 'all';
        p.classList.toggle('active', activeCategories.has(f));
      });

      filterEvents();
    });
  });

  // Desktop: Multi-select for regions
  regionChips.forEach(chip => {
    chip.addEventListener('click', () => {
      const filter = (chip as HTMLElement).dataset.filter || 'all';

      if (filter === 'all') {
        activeRegions = new Set(['all']);
        regionChips.forEach(c => c.classList.remove('active'));
        chip.classList.add('active');
      } else {
        activeRegions.delete('all');
        if (activeRegions.has(filter)) {
          activeRegions.delete(filter);
          chip.classList.remove('active');
        } else {
          activeRegions.add(filter);
          chip.classList.add('active');
        }
        if (activeRegions.size === 0) {
          activeRegions.add('all');
          regionChips.forEach(c => c.classList.toggle('active', (c as HTMLElement).dataset.filter === 'all'));
        } else {
          regionChips.forEach(c => {
            if ((c as HTMLElement).dataset.filter === 'all') c.classList.remove('active');
          });
        }
      }

      // Sync mobile sheet
      mobileRegionChips.forEach(c => {
        const f = (c as HTMLElement).dataset.filter || 'all';
        c.classList.toggle('active', activeRegions.has(f));
      });

      filterEvents();
    });
  });

  // Desktop location select
  locationSelect?.addEventListener('change', () => {
    activeLocation = locationSelect.value;
    if (mobileLocationSelect) mobileLocationSelect.value = activeLocation;
    filterEvents();
  });

  // Desktop clear
  clearBtnDesktop?.addEventListener('click', clearAllFilters);

  // Mobile: Category pills
  mobilePills.forEach(pill => {
    pill.addEventListener('click', () => {
      const filter = (pill as HTMLElement).dataset.filter || 'all';
      activeCategories = new Set([filter]);
      mobilePills.forEach(p => p.classList.remove('active'));
      pill.classList.add('active');

      // Sync desktop
      categoryChips.forEach(c => {
        const f = (c as HTMLElement).dataset.filter || 'all';
        c.classList.toggle('active', activeCategories.has(f));
      });

      filterEvents();
    });
  });

  // Mobile: More button opens sheet
  moreBtn?.addEventListener('click', openSheet);
  backdrop?.addEventListener('click', closeSheet);
  closeBtn?.addEventListener('click', closeSheet);

  // Mobile sheet: Region chips
  mobileRegionChips.forEach(chip => {
    chip.addEventListener('click', () => {
      const filter = (chip as HTMLElement).dataset.filter || 'all';

      if (filter === 'all') {
        activeRegions = new Set(['all']);
        mobileRegionChips.forEach(c => c.classList.remove('active'));
        chip.classList.add('active');
      } else {
        activeRegions.delete('all');
        if (activeRegions.has(filter)) {
          activeRegions.delete(filter);
          chip.classList.remove('active');
        } else {
          activeRegions.add(filter);
          chip.classList.add('active');
        }
        if (activeRegions.size === 0) {
          activeRegions.add('all');
          mobileRegionChips.forEach(c => c.classList.toggle('active', (c as HTMLElement).dataset.filter === 'all'));
        } else {
          mobileRegionChips.forEach(c => {
            if ((c as HTMLElement).dataset.filter === 'all') c.classList.remove('active');
          });
        }
      }

      // Sync desktop
      regionChips.forEach(c => {
        const f = (c as HTMLElement).dataset.filter || 'all';
        c.classList.toggle('active', activeRegions.has(f));
      });
    });
  });

  // Mobile sheet: Location select
  mobileLocationSelect?.addEventListener('change', () => {
    activeLocation = mobileLocationSelect.value;
    if (locationSelect) locationSelect.value = activeLocation;
  });

  // Mobile sheet: Apply
  applyBtn?.addEventListener('click', () => {
    filterEvents();
    closeSheet();
  });

  // Mobile sheet: Reset
  resetBtn?.addEventListener('click', () => {
    clearAllFilters();
    closeSheet();
  });
</script>
