---
interface Props {
  station?: string;
  stationCode?: string;
}

const { station = "Possenhofen", stationCode = "MPH" } = Astro.props;
---

<div class="train-widget" data-station={station}>
  <div class="train-header">
    <div class="train-title">
      <span class="train-badge">S6</span>
      <span>{station}</span>
    </div>
    <a href={`https://iris.noncd.db.de/wbt/js/index.html?bhf=${stationCode}`} target="_blank" rel="noopener" class="train-link">
      DB Live →
    </a>
  </div>
  <div class="train-body" id="train-table">
    <div class="train-loading">
      <span class="spinner"></span>
    </div>
  </div>
</div>

<style>
  .train-widget {
    background: var(--color-card);
    border-radius: var(--radius-md);
    overflow: hidden;
    border: 1px solid var(--color-border-light);
  }

  .train-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-3) var(--space-4);
    background: var(--color-bg-secondary);
    border-bottom: 1px solid var(--color-border-light);
  }

  .train-title {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-weight: 600;
    font-size: 0.875rem;
    color: var(--color-text);
  }

  .train-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 2px 8px;
    background: #16a34a;
    color: white;
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 700;
  }

  .train-link {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-primary);
  }

  .train-body {
    min-height: 80px;
  }

  .train-loading {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-6);
    color: var(--color-muted);
    font-size: 0.8125rem;
  }

  .spinner {
    width: 16px;
    height: 16px;
    border: 2px solid var(--color-border);
    border-top-color: var(--color-primary);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  :global(.train-row) {
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: var(--space-3);
    padding: var(--space-3) var(--space-4);
    border-bottom: 1px solid var(--color-border-light);
    font-size: 0.8125rem;
    align-items: center;
  }

  :global(.train-row:last-child) {
    border-bottom: none;
  }

  :global(.train-time) {
    font-weight: 600;
    color: var(--color-primary);
    font-variant-numeric: tabular-nums;
  }

  :global(.train-delay) {
    color: #dc2626;
    font-size: 0.6875rem;
    margin-left: 4px;
  }

  :global(.train-dest) {
    color: var(--color-text);
    font-weight: 500;
  }

  :global(.train-platform) {
    color: var(--color-muted);
    font-size: 0.75rem;
  }

  :global(.train-empty) {
    padding: var(--space-5) var(--space-4);
    text-align: center;
    color: var(--color-muted);
    font-size: 0.8125rem;
  }

  :global(.train-empty a) {
    color: var(--color-primary);
    font-weight: 500;
  }

  :global(.train-tomorrow) {
    color: var(--color-muted);
    font-size: 0.6875rem;
    font-weight: 500;
    margin-right: 3px;
  }

  :global(.train-sev) {
    display: inline-flex;
    align-items: center;
    padding: 1px 5px;
    background: #dc2626;
    color: white;
    border-radius: 3px;
    font-size: 0.625rem;
    font-weight: 700;
    margin-right: 6px;
  }
</style>

<script>
  // Same API as InfoTicker - transport.rest works better than dbf.finalrewind.org
  const TRAIN_API = 'https://v6.db.transport.rest/stops/8004874/departures?duration=1440&suburban=true';

  function formatTime(iso: string): string {
    return new Date(iso).toLocaleTimeString('de-DE', { hour: '2-digit', minute: '2-digit' });
  }

  function formatTrainTime(dep: any): string {
    const when = new Date(dep.when || dep.plannedWhen);
    const time = when.toLocaleTimeString('de-DE', { hour: '2-digit', minute: '2-digit' });
    
    const delayMin = dep.delay ? Math.round(dep.delay / 60) : 0;
    const delayHtml = delayMin > 0 ? `<span class="train-delay">+${delayMin}</span>` : '';
    
    // Check if departure is tomorrow (local time)
    const today = new Date();
    const todayDate = today.toLocaleDateString('de-DE');
    const depDate = when.toLocaleDateString('de-DE');
    
    if (depDate !== todayDate) {
      const tomorrow = new Date(today);
      tomorrow.setDate(tomorrow.getDate() + 1);
      const tomorrowDate = tomorrow.toLocaleDateString('de-DE');
      
      if (depDate === tomorrowDate) {
        return `<span class="train-tomorrow">morgen</span> ${time}${delayHtml}`;
      } else {
        const days = ['So', 'Mo', 'Di', 'Mi', 'Do', 'Fr', 'Sa'];
        const dayName = days[when.getDay()];
        return `<span class="train-tomorrow">${dayName}</span> ${time}${delayHtml}`;
      }
    }
    
    return time + delayHtml;
  }

  function shortDest(dest: string): string {
    if (!dest) return '–';
    return dest
      .replace(/\s*\([^)]*\)/g, '')
      .replace(/ Hbf$/, '')
      .replace(/ Bahnhof$/, '')
      .replace(/^München /, 'M-')
      .replace(/Ebersberg$/, 'Ebersberg')
      .replace(/Tutzing$/, 'Tutzing');
  }

  function renderDepartures(departures: any[], container: HTMLElement): void {
    // Simple filter: just check for S6 in line name (same as InfoTicker)
    const validDepartures = departures.filter((d: any) => {
      const line = d.line;
      if (!line) return false;
      
      // Must be S6 (S-Bahn or SEV Bus)
      const isS6 = line.name && (line.name.includes('S6') || line.name === 'S6');
      if (!isS6) return false;
      
      if (d.cancelled) return false;
      
      // Filter out ghost trains (>60 min delay)
      const delayMin = d.delay ? Math.round(d.delay / 60) : 0;
      if (delayMin > 60) return false;
      
      return true;
    });

    if (!validDepartures.length) {
      container.innerHTML = `
        <div class="train-empty">
          <p><strong>S6</strong> Tutzing ↔ München Hbf</p>
          <p>ca. alle 20 Min · ~35 Min</p>
          <a href="https://iris.noncd.db.de/wbt/js/index.html?bhf=MPH" target="_blank" rel="noopener">→ Live bei DB</a>
        </div>
      `;
      return;
    }

    // Take first 4 departures
    const toShow = validDepartures.slice(0, 4);

    container.innerHTML = toShow.map(d => {
      const direction = d.direction || d.destination?.name || '–';
      const platform = d.platform || '–';
      const lineName = d.line?.name || 'S6';
      const isSEV = lineName.toLowerCase().includes('bus');
      
      // Determine direction: from Possenhofen, Tutzing and Feldafing are the last stops south.
      // Everything else (Haar, Ebersberg, Erding, Grafing, etc.) is direction München.
      const isTutzing = direction.includes('Tutzing') || direction.includes('Feldafing');
      const dirLabel = isTutzing ? '→ Tutzing' : '→ München';
      
      return `
        <div class="train-row">
          <span class="train-time">${formatTrainTime(d)}</span>
          <span class="train-dest">
            ${isSEV ? '<span class="train-sev">SEV</span>' : ''}
            ${dirLabel}
          </span>
          <span class="train-platform">${platform !== '–' ? 'Gl. ' + platform : ''}</span>
        </div>
      `;
    }).join('');
  }

  async function loadTrain(widget: HTMLElement): Promise<void> {
    const container = widget.querySelector('#train-table');
    if (!container) return;

    try {
      const ctrl = new AbortController();
      const timer = setTimeout(() => ctrl.abort(), 8000);

      const res = await fetch(TRAIN_API, { signal: ctrl.signal });
      clearTimeout(timer);

      if (!res.ok) throw new Error('API error');
      const data = await res.json();
      const departures = data.departures || [];

      renderDepartures(departures, container as HTMLElement);
    } catch (e) {
      console.error('Train API error:', e);
      (container as HTMLElement).innerHTML = `
        <div class="train-empty">
          <p><strong>S6</strong> Tutzing ↔ München Hbf</p>
          <p>ca. alle 20 Min</p>
          <a href="https://iris.noncd.db.de/wbt/js/index.html?bhf=MPH" target="_blank" rel="noopener">→ Live bei DB</a>
        </div>
      `;
    }
  }

  let refreshInterval: number | null = null;

  document.addEventListener('DOMContentLoaded', () => {
    const widget = document.querySelector('.train-widget') as HTMLElement;
    if (widget) {
      loadTrain(widget);
      refreshInterval = setInterval(() => loadTrain(widget), 60000);
    }
  });

  window.addEventListener('pagehide', () => {
    if (refreshInterval) {
      clearInterval(refreshInterval);
    }
  });
</script>
