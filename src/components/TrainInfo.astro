---
interface Props {
  station?: string;
  stationId?: string;
}

const { station = "Possenhofen", stationId = "8004874" } = Astro.props;
---

<section class="train-board" data-station-id={stationId}>
  <div class="train-header">
    <span class="train-icon">ðŸš†</span>
    <span class="train-title">S-Bahn {station}</span>
    <a href="https://iris.noncd.db.de/wbt/js/index.html?bhf=MPH" target="_blank" class="train-link">DB Live â†’</a>
  </div>
  
  <div class="train-columns">
    <span class="col-time">Zeit</span>
    <span class="col-line">Linie</span>
    <span class="col-dest">Ziel</span>
    <span class="col-platform">Gleis</span>
  </div>
  
  <div class="train-departures" id="train-departures">
    <div class="train-loading">Abfahrten werden geladen...</div>
  </div>
</section>

<style>
  .train-board {
    background: #ffffff;
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 1.5rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    border: 1px solid #e0e0e0;
  }

  .train-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: linear-gradient(135deg, #1a73e8 0%, #0d47a1 100%);
    color: white;
  }

  .train-icon {
    font-size: 1.2rem;
  }

  .train-title {
    font-weight: 600;
    font-size: 1rem;
    flex: 1;
  }

  .train-link {
    color: white;
    font-size: 0.8rem;
    opacity: 0.9;
    text-decoration: none;
  }

  .train-link:hover {
    opacity: 1;
    text-decoration: underline;
  }

  .train-columns {
    display: grid;
    grid-template-columns: 70px 60px 1fr 60px;
    padding: 0.5rem 1rem;
    background: #f5f5f5;
    border-bottom: 1px solid #e0e0e0;
    font-size: 0.75rem;
    font-weight: 600;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .col-platform {
    text-align: center;
  }

  .train-departures {
    padding: 0;
  }

  .train-loading {
    padding: 1.5rem;
    text-align: center;
    color: #666;
  }

  .departure-row {
    display: grid;
    grid-template-columns: 70px 60px 1fr 60px;
    padding: 0.6rem 1rem;
    border-bottom: 1px solid #f0f0f0;
    align-items: center;
  }

  .departure-row:last-child {
    border-bottom: none;
  }

  .departure-row:hover {
    background: #fafafa;
  }

  .dep-time-cell {
    display: flex;
    flex-direction: column;
  }

  .dep-time {
    font-size: 1rem;
    font-weight: 700;
    color: #1a73e8;
  }

  .dep-delay {
    font-size: 0.7rem;
    color: #e53935;
    font-weight: 600;
  }

  .dep-line {
    background: #00a651;
    color: white;
    font-weight: 700;
    font-size: 0.85rem;
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    text-align: center;
    width: fit-content;
  }

  .dep-dest {
    font-weight: 500;
    color: #333;
    font-size: 0.95rem;
    padding-right: 0.5rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .dep-platform {
    font-size: 1rem;
    font-weight: 600;
    color: #333;
    text-align: center;
  }

  .train-fallback {
    padding: 1.5rem;
    text-align: center;
  }

  .train-fallback p {
    margin: 0.25rem 0;
    color: #666;
  }

  .train-fallback a {
    color: #1a73e8;
    font-weight: 500;
  }

  @media (max-width: 480px) {
    .train-columns {
      grid-template-columns: 60px 50px 1fr 45px;
      padding: 0.4rem 0.75rem;
      font-size: 0.65rem;
    }
    
    .departure-row {
      grid-template-columns: 60px 50px 1fr 45px;
      padding: 0.5rem 0.75rem;
    }

    .dep-time {
      font-size: 0.9rem;
    }

    .dep-line {
      font-size: 0.75rem;
      padding: 0.15rem 0.3rem;
    }

    .dep-dest {
      font-size: 0.85rem;
    }

    .dep-platform {
      font-size: 0.9rem;
    }
  }
</style>

<script>
  const API_BASE = 'https://v6.db.transport.rest';

  interface Departure {
    when: string | null;
    plannedWhen: string;
    delay: number | null;
    direction: string;
    platform: string | null;
    line: {
      name: string;
      product: string;
    };
  }

  async function fetchDepartures(stationId: string, retries = 2): Promise<Departure[]> {
    const url = `${API_BASE}/stops/${stationId}/departures?duration=120&results=15`;
    
    for (let attempt = 0; attempt <= retries; attempt++) {
      try {
        const response = await fetch(url, {
          headers: { 'Accept': 'application/json' }
        });
        
        if (!response.ok) {
          if (attempt < retries) {
            await new Promise(r => setTimeout(r, 1000));
            continue;
          }
          throw new Error(`API error: ${response.status}`);
        }
        
        const data = await response.json();
        return data.departures || [];
      } catch (e) {
        if (attempt === retries) throw e;
        await new Promise(r => setTimeout(r, 1000));
      }
    }
    return [];
  }

  function formatTime(isoString: string): string {
    const date = new Date(isoString);
    return date.toLocaleTimeString('de-DE', { 
      hour: '2-digit', 
      minute: '2-digit' 
    });
  }

  function getDelayText(delaySeconds: number | null): string {
    if (delaySeconds === null || delaySeconds === undefined || delaySeconds < 60) {
      return '';
    }
    const minutes = Math.round(delaySeconds / 60);
    return `+${minutes} min`;
  }

  function shortenDestination(dest: string): string {
    return dest
      .replace(/\s*\([^)]*\)/g, '')
      .replace('Ebersberg(Oberbay)', 'Ebersberg')
      .replace(' Hbf (tief)', '')
      .replace(' Hbf', '')
      .replace(' Bahnhof', '')
      .trim();
  }

  function renderDepartures(departures: Departure[], container: HTMLElement): void {
    const trainDepartures = departures
      .filter(d => d.when && d.line && (d.line.product === 'suburban' || d.line.product === 'regional'))
      .slice(0, 6);
    
    if (trainDepartures.length === 0) {
      container.innerHTML = `
        <div class="train-fallback">
          <p><strong>S6</strong> Richtung Tutzing / MÃ¼nchen</p>
          <p>ca. alle 20 Minuten</p>
          <p><a href="https://iris.noncd.db.de/wbt/js/index.html?bhf=MPH" target="_blank">Live-Abfahrten ansehen â†’</a></p>
        </div>
      `;
      return;
    }
    
    container.innerHTML = trainDepartures.map(dep => {
      const time = formatTime(dep.when || dep.plannedWhen);
      const delayText = getDelayText(dep.delay);
      const destination = shortenDestination(dep.direction);
      const platform = dep.platform || 'â€”';
      
      return `
        <div class="departure-row">
          <div class="dep-time-cell">
            <span class="dep-time">${time}</span>
            ${delayText ? `<span class="dep-delay">${delayText}</span>` : ''}
          </div>
          <span class="dep-line">${dep.line.name}</span>
          <span class="dep-dest">${destination}</span>
          <span class="dep-platform">${platform}</span>
        </div>
      `;
    }).join('');
  }

  async function updateDepartures(board: HTMLElement): Promise<void> {
    const stationId = board.dataset.stationId;
    const container = board.querySelector('#train-departures') as HTMLElement;
    
    if (!stationId || !container) return;
    
    try {
      const departures = await fetchDepartures(stationId);
      renderDepartures(departures, container);
    } catch (error) {
      console.error('Failed to fetch departures:', error);
      container.innerHTML = `
        <div class="train-fallback">
          <p>Verbindung fehlgeschlagen</p>
          <p><a href="https://iris.noncd.db.de/wbt/js/index.html?bhf=MPH" target="_blank">Live-Abfahrten Ã¶ffnen â†’</a></p>
        </div>
      `;
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    const board = document.querySelector('.train-board') as HTMLElement;
    
    if (board) {
      updateDepartures(board);
      setInterval(() => updateDepartures(board), 60000);
    }
  });
</script>
