---
interface Props {
  station?: string;
  stationCode?: string;
}

const { station = "Possenhofen", stationCode = "MPH" } = Astro.props;
---

<div class="train-widget" data-station={station}>
  <div class="train-header">
    <div class="train-title">
      <span class="train-badge">S6</span>
      <span>{station}</span>
    </div>
    <a href={`https://iris.noncd.db.de/wbt/js/index.html?bhf=${stationCode}`} target="_blank" rel="noopener" class="train-link">
      DB Live →
    </a>
  </div>
  <div class="train-body" id="train-table">
    <div class="train-loading">
      <span class="spinner"></span>
    </div>
  </div>
</div>

<style>
  .train-widget {
    background: var(--color-card);
    border-radius: var(--radius-md);
    overflow: hidden;
    border: 1px solid var(--color-border-light);
  }

  .train-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-3) var(--space-4);
    background: var(--color-bg-secondary);
    border-bottom: 1px solid var(--color-border-light);
  }

  .train-title {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-weight: 600;
    font-size: 0.875rem;
    color: var(--color-text);
  }

  .train-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 2px 8px;
    background: #16a34a;
    color: white;
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 700;
  }

  .train-link {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-primary);
  }

  .train-body {
    min-height: 80px;
  }

  .train-loading {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-6);
    color: var(--color-muted);
    font-size: 0.8125rem;
  }

  .spinner {
    width: 16px;
    height: 16px;
    border: 2px solid var(--color-border);
    border-top-color: var(--color-primary);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  :global(.train-row) {
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: var(--space-3);
    padding: var(--space-3) var(--space-4);
    border-bottom: 1px solid var(--color-border-light);
    font-size: 0.8125rem;
    align-items: center;
  }

  :global(.train-row:last-child) {
    border-bottom: none;
  }

  :global(.train-time) {
    font-weight: 600;
    color: var(--color-primary);
    font-variant-numeric: tabular-nums;
  }

  :global(.train-delay) {
    color: #dc2626;
    font-size: 0.6875rem;
    margin-left: 4px;
  }

  :global(.train-dest) {
    color: var(--color-text);
    font-weight: 500;
  }

  :global(.train-platform) {
    color: var(--color-muted);
    font-size: 0.75rem;
  }

  :global(.train-empty) {
    padding: var(--space-5) var(--space-4);
    text-align: center;
    color: var(--color-muted);
    font-size: 0.8125rem;
  }

  :global(.train-empty a) {
    color: var(--color-primary);
    font-weight: 500;
  }

  :global(.train-tomorrow) {
    color: var(--color-muted);
    font-size: 0.6875rem;
    font-weight: 500;
    margin-right: 3px;
  }

  :global(.train-sev) {
    display: inline-flex;
    align-items: center;
    padding: 1px 5px;
    background: #dc2626;
    color: white;
    border-radius: 3px;
    font-size: 0.625rem;
    font-weight: 700;
    margin-right: 6px;
  }
</style>

<script>
  const LIVE_API = 'https://train-tracker.steffenvonlindern-be7.workers.dev/api/live';

  function renderDepartures(departures: any[], container: HTMLElement): void {
    const valid = departures.filter((d: any) => !d.cancelled && d.delay <= 60);

    if (!valid.length) {
      container.innerHTML = `
        <div class="train-empty">
          <p><strong>S6</strong> Tutzing ↔ München Hbf</p>
          <p>ca. alle 20 Min · ~35 Min</p>
          <a href="https://iris.noncd.db.de/wbt/js/index.html?bhf=MPH" target="_blank" rel="noopener">→ Live bei DB</a>
        </div>
      `;
      return;
    }

    container.innerHTML = valid.slice(0, 4).map(d => {
      const delayHtml = d.delay > 0 ? `<span class="train-delay">+${d.delay}</span>` : '';
      const time = d.actualTime || d.plannedTime;
      const isTutzing = /Tutzing|Feldafing/i.test(d.direction);
      const dirLabel = isTutzing ? '→ Tutzing' : '→ München';
      const platform = d.platform ? `Gl. ${d.platform}` : '';

      return `
        <div class="train-row">
          <span class="train-time">${time}${delayHtml}</span>
          <span class="train-dest">${dirLabel}</span>
          <span class="train-platform">${platform}</span>
        </div>
      `;
    }).join('');
  }

  async function loadTrain(widget: HTMLElement): Promise<void> {
    const container = widget.querySelector('#train-table');
    if (!container) return;

    try {
      const ctrl = new AbortController();
      const timer = setTimeout(() => ctrl.abort(), 8000);
      const res = await fetch(LIVE_API, { signal: ctrl.signal });
      clearTimeout(timer);

      if (!res.ok) throw new Error('API error');
      const data = await res.json();
      renderDepartures(data.departures || [], container as HTMLElement);
    } catch (e) {
      console.error('Train API error:', e);
      (container as HTMLElement).innerHTML = `
        <div class="train-empty">
          <p><strong>S6</strong> Tutzing ↔ München Hbf</p>
          <p>ca. alle 20 Min</p>
          <a href="https://iris.noncd.db.de/wbt/js/index.html?bhf=MPH" target="_blank" rel="noopener">→ Live bei DB</a>
        </div>
      `;
    }
  }

  let refreshInterval: number | null = null;

  document.addEventListener('DOMContentLoaded', () => {
    const widget = document.querySelector('.train-widget') as HTMLElement;
    if (widget) {
      loadTrain(widget);
      refreshInterval = setInterval(() => loadTrain(widget), 60000);
    }
  });

  window.addEventListener('pagehide', () => {
    if (refreshInterval) {
      clearInterval(refreshInterval);
    }
  });
</script>
