---
interface Props {
  station?: string;
  stationId?: string;
}

const { station = "Possenhofen", stationId = "8004874" } = Astro.props;
---

<section class="train-board" data-station-id={stationId}>
  <div class="train-header">
    <span class="train-icon">ðŸš†</span>
    <span class="train-title">S-Bahn {station}</span>
    <a href="https://iris.noncd.db.de/wbt/js/index.html?bhf=MPH" target="_blank" class="train-link">DB Live â†’</a>
  </div>
  
  <div class="train-columns">
    <span>Zeit</span>
    <span>Linie</span>
    <span>Ziel</span>
    <span class="text-center">Gleis</span>
  </div>
  
  <div class="train-departures" id="train-departures">
    <div class="train-loading">Lade Abfahrten...</div>
  </div>
</section>

<style>
  .train-board {
    background: #ffffff;
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 1.5rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    border: 1px solid #e0e0e0;
  }

  .train-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: linear-gradient(135deg, #1a73e8 0%, #0d47a1 100%);
    color: white;
  }

  .train-icon {
    font-size: 1.2rem;
  }

  .train-title {
    font-weight: 600;
    font-size: 1rem;
    flex: 1;
  }

  .train-link {
    color: white;
    font-size: 0.8rem;
    opacity: 0.9;
    text-decoration: none;
  }

  .train-link:hover {
    opacity: 1;
    text-decoration: underline;
  }

  .train-columns {
    display: grid;
    grid-template-columns: 70px 55px 1fr 50px;
    padding: 0.5rem 1rem;
    background: #f5f5f5;
    border-bottom: 1px solid #e0e0e0;
    font-size: 0.7rem;
    font-weight: 600;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .text-center {
    text-align: center;
  }

  .train-departures {
    min-height: 100px;
  }

  .train-loading {
    padding: 2rem 1rem;
    text-align: center;
    color: #999;
    font-size: 0.9rem;
  }
</style>

<!-- Separate global styles for JS-generated content -->
<style is:global>
  .dep-row {
    display: grid;
    grid-template-columns: 70px 55px 1fr 50px;
    padding: 0.65rem 1rem;
    border-bottom: 1px solid #f0f0f0;
    align-items: center;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  .dep-row:last-child {
    border-bottom: none;
  }

  .dep-time {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .dep-time-val {
    font-size: 1.05rem;
    font-weight: 700;
    color: #1a73e8;
  }

  .dep-time-delay {
    font-size: 0.7rem;
    color: #d32f2f;
    font-weight: 600;
  }

  .dep-line-badge {
    background: #43a047;
    color: white;
    font-weight: 700;
    font-size: 0.8rem;
    padding: 3px 6px;
    border-radius: 4px;
    text-align: center;
    display: inline-block;
  }

  .dep-dest {
    font-weight: 500;
    color: #212121;
    font-size: 0.95rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .dep-platform {
    font-size: 1.05rem;
    font-weight: 600;
    color: #424242;
    text-align: center;
  }

  .train-fallback {
    padding: 1.5rem 1rem;
    text-align: center;
    color: #666;
    font-size: 0.9rem;
  }

  .train-fallback a {
    color: #1a73e8;
    text-decoration: none;
    font-weight: 500;
  }

  .train-fallback a:hover {
    text-decoration: underline;
  }

  @media (max-width: 400px) {
    .train-columns,
    .dep-row {
      grid-template-columns: 55px 45px 1fr 40px;
      padding-left: 0.75rem;
      padding-right: 0.75rem;
    }

    .dep-time-val {
      font-size: 0.95rem;
    }

    .dep-line-badge {
      font-size: 0.7rem;
      padding: 2px 4px;
    }

    .dep-dest {
      font-size: 0.85rem;
    }

    .dep-platform {
      font-size: 0.95rem;
    }
  }
</style>

<script>
  const API_BASE = 'https://v6.db.transport.rest';

  interface Departure {
    when: string | null;
    plannedWhen: string;
    delay: number | null;
    direction: string;
    platform: string | null;
    line: {
      name: string;
      product: string;
    };
  }

  async function fetchDepartures(stationId: string): Promise<Departure[]> {
    const url = `${API_BASE}/stops/${stationId}/departures?duration=120&results=12`;
    
    try {
      const res = await fetch(url, { headers: { Accept: 'application/json' } });
      if (!res.ok) throw new Error(`${res.status}`);
      const data = await res.json();
      return data.departures || [];
    } catch (e) {
      console.error('API fetch failed:', e);
      throw e;
    }
  }

  function fmtTime(iso: string): string {
    return new Date(iso).toLocaleTimeString('de-DE', { hour: '2-digit', minute: '2-digit' });
  }

  function fmtDelay(sec: number | null): string {
    if (!sec || sec < 60) return '';
    return `+${Math.round(sec / 60)}`;
  }

  function shortDest(d: string): string {
    return d.replace(/\s*\([^)]*\)/g, '').replace(/ Hbf.*$/, '').replace(/ Bahnhof/, '').trim();
  }

  function render(deps: Departure[], el: HTMLElement): void {
    const trains = deps
      .filter(d => d.when && d.line && ['suburban', 'regional'].includes(d.line.product))
      .slice(0, 6);

    if (!trains.length) {
      el.innerHTML = `<div class="train-fallback">
        <p><strong>S6</strong> nach Tutzing / MÃ¼nchen â€” ca. alle 20 min</p>
        <p><a href="https://iris.noncd.db.de/wbt/js/index.html?bhf=MPH" target="_blank">Live-Abfahrten â†’</a></p>
      </div>`;
      return;
    }

    el.innerHTML = trains.map(t => {
      const time = fmtTime(t.when || t.plannedWhen);
      const delay = fmtDelay(t.delay);
      const dest = shortDest(t.direction);
      const plat = t.platform || 'â€“';

      return `<div class="dep-row">
        <div class="dep-time">
          <span class="dep-time-val">${time}</span>
          ${delay ? `<span class="dep-time-delay">${delay}</span>` : ''}
        </div>
        <span class="dep-line-badge">${t.line.name}</span>
        <span class="dep-dest">${dest}</span>
        <span class="dep-platform">${plat}</span>
      </div>`;
    }).join('');
  }

  async function update(board: HTMLElement): Promise<void> {
    const id = board.dataset.stationId;
    const container = board.querySelector('#train-departures') as HTMLElement;
    if (!id || !container) return;

    try {
      const deps = await fetchDepartures(id);
      render(deps, container);
    } catch {
      container.innerHTML = `<div class="train-fallback">
        <p>Verbindung fehlgeschlagen</p>
        <p><a href="https://iris.noncd.db.de/wbt/js/index.html?bhf=MPH" target="_blank">Live-Abfahrten â†’</a></p>
      </div>`;
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    const board = document.querySelector('.train-board') as HTMLElement;
    if (board) {
      update(board);
      setInterval(() => update(board), 60000);
    }
  });
</script>
