---
// Webcam links for Starnberger See
// BYC is the only reliably available one

interface Webcam {
  name: string;
  location: string;
  url: string;
  status: 'online' | 'offline' | 'unknown';
  hasWeather?: boolean;
}

const webcams: Webcam[] = [
  {
    name: "BYC Starnberg",
    location: "Yachthafen Starnberg",
    url: "https://www.byc.de/webcams-wetter/",
    status: "online",
    hasWeather: true
  },
  {
    name: "DTYC Tutzing",
    location: "SeestraÃŸe, Tutzing",
    url: "https://www.dtyc.de/webcam",
    status: "offline"
  }
];

const onlineWebcams = webcams.filter(w => w.status === 'online');
---

<div class="webcam-widget">
  <div class="webcam-header">
    <div class="webcam-title">
      <span class="webcam-icon">ðŸ“¹</span>
      <span>Webcams</span>
    </div>
    <span class="webcam-count">{onlineWebcams.length} online</span>
  </div>
  
  <div class="webcam-body">
    {webcams.map(cam => (
      <a href={cam.url} target="_blank" class={`webcam-item ${cam.status}`}>
        <div class="webcam-info">
          <span class="webcam-name">{cam.name}</span>
          <span class="webcam-location">{cam.location}</span>
        </div>
        <div class="webcam-status">
          {cam.status === 'online' ? (
            <span class="status-badge online">
              <span class="status-dot"></span>
              Live
            </span>
          ) : (
            <span class="status-badge offline">Offline</span>
          )}
          {cam.hasWeather && (
            <span class="weather-badge">+ Wetter</span>
          )}
        </div>
        <svg class="link-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
          <polyline points="15 3 21 3 21 9"></polyline>
          <line x1="10" y1="14" x2="21" y2="3"></line>
        </svg>
      </a>
    ))}
  </div>
</div>

<style>
  .webcam-widget {
    background: var(--color-card);
    border-radius: var(--radius-sm);
    overflow: hidden;
    border: 1px solid var(--color-border-light);
    transition: all 0.2s ease;
  }

  .webcam-widget:hover {
    box-shadow: var(--shadow-md);
  }

  .webcam-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 16px;
    background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
    color: white;
  }

  .webcam-title {
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 600;
    font-size: 0.95rem;
  }

  .webcam-icon {
    font-size: 1rem;
  }

  .webcam-count {
    font-size: 0.75rem;
    opacity: 0.9;
    background: rgba(255,255,255,0.2);
    padding: 3px 10px;
    border-radius: var(--radius-full);
  }

  .webcam-body {
    display: flex;
    flex-direction: column;
  }

  .webcam-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    border-bottom: 1px solid var(--color-border);
    text-decoration: none;
    transition: background 0.2s;
  }

  .webcam-item:last-child {
    border-bottom: none;
  }

  .webcam-item:hover {
    background: var(--color-bg);
  }

  .webcam-item.offline {
    opacity: 0.6;
  }

  .webcam-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .webcam-name {
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--color-text);
  }

  .webcam-location {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  .webcam-status {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .status-badge {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 3px 8px;
    border-radius: var(--radius-full);
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .status-badge.online {
    background: #dcfce7;
    color: #166534;
  }

  .status-badge.offline {
    background: var(--color-bg);
    color: var(--color-muted);
  }

  .status-dot {
    width: 6px;
    height: 6px;
    background: #22c55e;
    border-radius: 50%;
    animation: blink 2s ease-in-out infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  .weather-badge {
    font-size: 0.65rem;
    color: var(--color-text-secondary);
    background: var(--color-bg);
    padding: 2px 6px;
    border-radius: var(--radius-full);
  }

  .link-icon {
    width: 16px;
    height: 16px;
    color: var(--color-muted);
    flex-shrink: 0;
  }

  .webcam-item:hover .link-icon {
    color: var(--color-primary);
  }
</style>
