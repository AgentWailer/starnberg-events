---
import EventCard from './EventCard.astro';

interface Props {
  date: Date;
  events: any[];
  regions?: Record<string, { name: string; emoji: string }>;
  artTagsData?: Record<string, { name: string; emoji: string }>;
}

const { date, events, regions = {}, artTagsData = {} } = Astro.props;

// Check if today
const today = new Date();
today.setHours(0, 0, 0, 0);
const compareDate = new Date(date);
compareDate.setHours(0, 0, 0, 0);
const isToday = compareDate.getTime() === today.getTime();

// Format day header
const weekdayLong = date.toLocaleDateString('de-DE', { weekday: 'long' });
const dayNum = date.getDate();
const monthLong = date.toLocaleDateString('de-DE', { month: 'long' });

const dayLabel = isToday 
  ? `Heute · ${weekdayLong}, ${dayNum}. ${monthLong}`
  : `${weekdayLong}, ${dayNum}. ${monthLong}`;
---

<div class="day-group">
  <h3 class="section-heading">{dayLabel}</h3>
  <div class="day-events">
    {events.map(event => (
      <EventCard event={event} regions={regions} artTagsData={artTagsData} />
    ))}
  </div>
</div>

<style>
  .day-group {
    margin-bottom: var(--space-5);
  }

  .section-heading {
    position: sticky;
    top: 50px; /* Just below mobile ticker (~51px) */
    background: var(--color-bg);
    z-index: 2;
    padding-top: var(--space-3); /* 12px breathing room */
  }

  /* Small cover for the gap between ticker and heading */
  .section-heading::before {
    content: '';
    position: absolute;
    left: -20px;
    right: -20px;
    bottom: 100%;
    height: 10px;
    background: var(--color-bg);
  }

  @media (min-width: 768px) {
    .section-heading {
      top: 361px; /* Exactly at header bottom — no gap */
      padding-top: var(--space-4); /* 16px breathing room */
    }

    .section-heading::before {
      left: -40px;
      right: -40px;
      height: 10px; /* Small safety buffer */
    }
  }

  .day-events {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  @media (min-width: 640px) {
    .day-events {
      gap: var(--space-5);
    }
  }
</style>
