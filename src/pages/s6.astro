    const cH = H - pad.top - pad.bottom;
    const maxTotal = Math.max(...daily.map((d: any) => (d.on_time || 0) + (d.delayed || 0) + (d.cancelled || 0)), 1);
    const gap = cW / daily.length;
    const barW = Math.max(6, Math.min(26, gap * 0.7));

    let svg = '';
