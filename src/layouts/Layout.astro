---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Events & Veranstaltungen am Starnberger See" } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="dns-prefetch" href="https://api.open-meteo.com">
    <link rel="dns-prefetch" href="https://dbf.finalrewind.org">
    <link rel="preconnect" href="https://api.open-meteo.com" crossorigin>
    <title>{title}</title>
    
    <!-- Flash prevention: Apply theme ASAP -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('theme');
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
  </head>
  <body>
    <a href="#main-content" class="skip-link">Zum Hauptinhalt springen</a>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    /* === ALPENSEE Color Palette === */
    
    /* Primary - Der See (Deep Teal-Blue) */
    --color-primary: #0d4a5c;
    --color-primary-light: #1a6a82;
    --color-primary-dark: #0a3a48;
    
    /* Accent - Dezentes Gold */
    --color-accent: #c9a962;
    --color-accent-light: #d4be8a;
    
    /* Kategorien - Gedämpft, nicht schrill */
    --color-kinder: #d97706;
    --color-familie: #059669;
    --color-erwachsene: #7c3aed;
    
    /* Backgrounds - Warme Töne */
    --color-bg: #faf8f6;
    --color-bg-secondary: #f3f0ed;
    --color-card: #ffffff;
    
    /* Text - Warme Neutrals */
    --color-text: #2d2a26;
    --color-text-secondary: #5c5650;
    --color-muted: #a8a095;
    --color-border: #e8e4e0;
    --color-border-light: #f3f0ed;
    
    /* Schatten - Weich und subtil */
    --shadow-sm: 0 1px 2px rgba(45, 42, 38, 0.04);
    --shadow-md: 0 4px 12px rgba(45, 42, 38, 0.06);
    --shadow-lg: 0 12px 24px rgba(45, 42, 38, 0.08);
    --shadow-xl: 0 24px 48px rgba(45, 42, 38, 0.1);
    
    /* Border Radii - Soft */
    --radius-sm: 6px;
    --radius-md: 10px;
    --radius-lg: 14px;
    --radius-xl: 20px;
    --radius-full: 9999px;

    /* Touch targets */
    --touch-target-min: 44px;
    
    /* Animation */
    --duration-fast: 120ms;
    --duration-normal: 200ms;
    --duration-slow: 300ms;
    
    /* Spacing Scale */
    --space-1: 0.25rem;
    --space-2: 0.5rem;
    --space-3: 0.75rem;
    --space-4: 1rem;
    --space-5: 1.25rem;
    --space-6: 1.5rem;
    --space-8: 2rem;
    --space-10: 2.5rem;
    --space-12: 3rem;
    --space-16: 4rem;
    --space-20: 5rem;
    --space-24: 6rem;
  }

  /* === Dark Mode - Manually Toggled === */
  :root.dark {
    --color-primary: #4db6d1;
    --color-primary-light: #6bc9e0;
    --color-primary-dark: #3a9ab3;
    
    --color-accent: #d4be8a;
    --color-accent-light: #e0cfa0;
    
    --color-kinder: #fbbf24;
    --color-familie: #34d399;
    --color-erwachsene: #a78bfa;
    
    --color-bg: #1a1816;
    --color-bg-secondary: #252220;
    --color-card: #2d2a26;
    
    --color-text: #faf8f6;
    --color-text-secondary: #c4beb5;
    --color-muted: #7a756d;
    --color-border: #3d3a36;
    --color-border-light: #2d2a26;
    
    --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.2);
    --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.25);
    --shadow-lg: 0 12px 24px rgba(0, 0, 0, 0.3);
    --shadow-xl: 0 24px 48px rgba(0, 0, 0, 0.35);
  }
  
  /* Smooth transition when toggling theme */
  :root {
    transition: background-color var(--duration-normal) ease;
  }
  
  @media (prefers-reduced-motion: reduce) {
    :root {
      transition: none;
    }
  }

  /* === Reduced Motion === */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
      transform: none !important;
    }
    
    /* Disable hover effects that use transform */
    .pill:active,
    .clear-filters:active,
    button:active,
    [role="button"]:active {
      transform: none !important;
    }
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: system-ui, -apple-system, 'Segoe UI', Roboto, sans-serif;
    background: var(--color-bg);
    color: var(--color-text);
    line-height: 1.65;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    min-height: 100vh;
    -webkit-text-size-adjust: 100%;
  }

  /* === Typography - Space Grotesk for Headlines === */
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-weight: 600;
    line-height: 1.15;
    letter-spacing: -0.03em;
    color: var(--color-text);
  }

  h1 {
    font-size: clamp(2rem, 6vw, 3.5rem);
    font-weight: 700;
  }

  h2 {
    font-size: clamp(1.25rem, 3vw, 1.75rem);
  }

  h3 {
    font-size: clamp(1rem, 2vw, 1.25rem);
  }

  p {
    max-width: 65ch;
  }

  a {
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--duration-fast) ease;
  }

  a:hover {
    color: var(--color-primary-light);
  }

  /* === Touch Feedback === */
  button,
  a,
  [role="button"],
  summary,
  .chip,
  .card-link {
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
  }

  button:active,
  [role="button"]:active,
  summary:active {
    transform: scale(0.98);
  }

  /* Container - Generous */
  .container {
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    padding: 0 var(--space-5);
  }

  @media (min-width: 640px) {
    .container {
      padding: 0 var(--space-8);
    }
  }

  /* Focus states */
  button:focus-visible,
  a:focus-visible,
  input:focus-visible,
  select:focus-visible,
  summary:focus-visible,
  [tabindex]:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }

  :focus:not(:focus-visible) {
    outline: none;
  }

  /* Hide scrollbar utility */
  .hide-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .hide-scrollbar::-webkit-scrollbar {
    display: none;
  }

  /* Skeleton Loading */
  @keyframes skeleton-shimmer {
    0% { background-position: -200% 0; }
    100% { background-position: 200% 0; }
  }

  .skeleton {
    background: linear-gradient(
      90deg,
      var(--color-border-light) 25%,
      var(--color-bg-secondary) 50%,
      var(--color-border-light) 75%
    );
    background-size: 200% 100%;
    animation: skeleton-shimmer 1.5s ease-in-out infinite;
    border-radius: var(--radius-sm);
  }

  @media (prefers-reduced-motion: reduce) {
    .skeleton {
      animation: none;
      background: var(--color-border-light);
    }
  }

  /* Utility: Visually hidden but accessible */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  /* Skip Link */
  .skip-link {
    position: absolute;
    top: calc(-1 * var(--touch-target-min));
    left: var(--space-4);
    background: var(--color-primary);
    color: white;
    padding: var(--space-3) var(--space-5);
    border-radius: var(--radius-md);
    font-weight: 600;
    font-size: 0.875rem;
    z-index: 9999;
    text-decoration: none;
    box-shadow: var(--shadow-lg);
    transition: top var(--duration-fast) ease;
  }

  .skip-link:focus {
    top: var(--space-4);
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }
</style>
