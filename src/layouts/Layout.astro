---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Veranstaltungen f√ºr Familien in Oberbayern" } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    /* === Light Mode (Default) === */
    --color-primary: #000000;
    --color-primary-light: #333333;
    --color-accent: #e85d04;
    --color-kinder: #f59e0b;
    --color-familie: #10b981;
    --color-erwachsene: #8b5cf6;
    
    /* Slightly off-white background */
    --color-bg: #f5f5f5;
    --color-bg-secondary: #eeeeee;
    --color-card: #ffffff;
    
    /* High contrast text */
    --color-text: #031419;
    --color-text-secondary: #555555;
    --color-muted: #888888;
    --color-border: #e5e5e5;
    --color-border-light: #f0f0f0;
    
    /* Minimal shadows */
    --shadow-sm: none;
    --shadow-md: 0 2px 8px rgba(0,0,0,0.08);
    --shadow-lg: 0 4px 12px rgba(0,0,0,0.1);
    
    /* Sharp edges */
    --radius-sm: 0px;
    --radius-md: 0px;
    --radius-lg: 0px;
    --radius-full: 9999px;

    /* Touch target minimum (44px per Apple HIG, 48px per Material) */
    --touch-target-min: 44px;
    
    /* Animation durations */
    --duration-fast: 100ms;
    --duration-normal: 200ms;
    --duration-slow: 300ms;
  }

  /* === Dark Mode === */
  @media (prefers-color-scheme: dark) {
    :root {
      --color-primary: #ffffff;
      --color-primary-light: #e0e0e0;
      --color-accent: #ff8534;
      --color-kinder: #fbbf24;
      --color-familie: #34d399;
      --color-erwachsene: #a78bfa;
      
      --color-bg: #121212;
      --color-bg-secondary: #1e1e1e;
      --color-card: #1e1e1e;
      
      --color-text: #f5f5f5;
      --color-text-secondary: #b0b0b0;
      --color-muted: #888888;
      --color-border: #333333;
      --color-border-light: #2a2a2a;
      
      --shadow-sm: none;
      --shadow-md: 0 2px 8px rgba(0,0,0,0.3);
      --shadow-lg: 0 4px 12px rgba(0,0,0,0.4);
    }
  }

  /* === Reduced Motion === */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
      scroll-behavior: auto !important;
    }
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: 'Montserrat', system-ui, -apple-system, sans-serif;
    background: var(--color-bg);
    color: var(--color-text);
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
    min-height: 100vh;
    /* Prevent text size adjustment on orientation change */
    -webkit-text-size-adjust: 100%;
  }

  a {
    color: var(--color-primary);
    text-decoration: none;
    transition: color var(--duration-fast);
  }

  a:hover {
    color: var(--color-primary-light);
  }

  /* === Touch Feedback: Active States === */
  /* Apply to all interactive elements for immediate touch feedback */
  button,
  a,
  [role="button"],
  summary,
  .chip,
  .card-link {
    -webkit-tap-highlight-color: transparent;
    touch-action: manipulation;
  }

  button:active,
  [role="button"]:active,
  summary:active {
    transform: scale(0.97);
    opacity: 0.9;
  }

  /* Utility classes */
  .container {
    width: 100%;
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 16px;
  }

  @media (min-width: 640px) {
    .container {
      padding: 0 24px;
    }
  }

  /* Focus states for accessibility - visible ring */
  button:focus-visible,
  a:focus-visible,
  input:focus-visible,
  select:focus-visible,
  summary:focus-visible,
  [tabindex]:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  /* Remove default focus outline when not using keyboard */
  :focus:not(:focus-visible) {
    outline: none;
  }

  /* Hide scrollbar but keep functionality */
  .hide-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .hide-scrollbar::-webkit-scrollbar {
    display: none;
  }

  /* === Skeleton Loading Animation === */
  @keyframes skeleton-shimmer {
    0% {
      background-position: -200% 0;
    }
    100% {
      background-position: 200% 0;
    }
  }

  .skeleton {
    background: linear-gradient(
      90deg,
      var(--color-border-light) 25%,
      var(--color-bg-secondary) 50%,
      var(--color-border-light) 75%
    );
    background-size: 200% 100%;
    animation: skeleton-shimmer 1.5s ease-in-out infinite;
    border-radius: var(--radius-sm);
  }

  /* Skeleton respects reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .skeleton {
      animation: none;
      background: var(--color-border-light);
    }
  }
</style>
